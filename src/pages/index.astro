---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation';
import Hero from '../components/Hero';
import Services from '../components/Services';
import WhyChooseUs from '../components/WhyChooseUs';
import CTASection from '../components/CTASection';
import { getNavigationData } from '@/lib/navigation-data';
import { Logo } from '@/components/Logo';
import Footer from '@/components/Footer.astro';

const { servicesData, recentPosts } = await getNavigationData();
---

<Layout title="Managed IT Services & Cloud Hosting | BDKinc">
  <!-- JSON-LD Organization Schema -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "BDKinc",
      "url": "https://www.bdkinc.com",
      "logo": "https://www.bdkinc.com/logo.svg",
      "description": "IT Made Simple - Your trusted technology partner for managed IT services, cloud hosting, and cybersecurity solutions.",
      "sameAs": [],
      "contactPoint": {
        "@type": "ContactPoint",
        "telephone": "(800) 309-0004",
        "contactType": "Customer Support",
        "email": "info@bdkinc.com"
      },
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "29515 Canvasback Drive",
        "addressLocality": "Easton",
        "addressRegion": "MD",
        "postalCode": "21601",
        "addressCountry": "US"
      }
    }
  </script>

  <Navigation
    client:load
    services={servicesData}
    blogPosts={recentPosts}
    currentPath={Astro.url.pathname}
  />
  <main id="main-content">
    <Hero client:visible />
    <Services client:visible services={servicesData} />
    <WhyChooseUs client:visible />

    <CTASection client:visible />
  </main>

  <Footer />
</Layout>
