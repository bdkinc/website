---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import { Calendar, User, Tag, ArrowLeft, Mail } from 'lucide-react';
import { getNavigationData } from '@/lib/navigation-data';
import { Logo } from '@/components/Logo';
import Footer from '@/components/Footer.astro';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog', ({ data }) => !data.draft);
  return blogEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

interface Props {
  entry: CollectionEntry<'blog'>;
}

const { entry } = Astro.props;
const { Content } = await entry.render();

const { servicesData, recentPosts } = await getNavigationData();

// Format date helper
function formatDate(date: Date): string {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  }).format(date);
}
---

<Layout title={`${entry.data.title} - BDKinc Blog`}>
  <Navigation
    client:load
    services={servicesData}
    blogPosts={recentPosts}
    currentPath={Astro.url.pathname}
  />
  <main id="main-content">
    <!-- Blog Post Header -->
    <section class="relative overflow-hidden px-4 pt-24 pb-12 sm:px-6 lg:px-8">
      <div class="gradient-mesh absolute inset-0 opacity-30"></div>
      <div class="circuit-overlay absolute inset-0 opacity-40"></div>
      <div class="relative z-10 mx-auto max-w-4xl">
        <a
          href="/blog"
          class="text-primary hover:text-primary/80 animate-in fade-in slide-in-from-bottom-3 fill-mode-both mb-8 inline-flex items-center gap-2 transition-colors delay-100 duration-500"
        >
          <ArrowLeft className="h-4 w-4" />
          Back to Blog
        </a>

        <h1
          transition:name={`blog-title-${entry.slug}`}
          transition:animate="initial"
          class="text-foreground mb-6 text-4xl font-bold md:text-5xl lg:text-6xl"
        >
          {entry.data.title}
        </h1>

        <div
          class="text-muted-foreground animate-in fade-in slide-in-from-bottom-3 fill-mode-both mb-6 flex flex-wrap items-center gap-6 delay-300 duration-500"
        >
          <div class="flex items-center gap-2">
            <Calendar className="h-5 w-5" />
            <time datetime={entry.data.pubDate.toISOString()}>
              {formatDate(entry.data.pubDate)}
            </time>
          </div>
          <div class="flex items-center gap-2">
            <User className="h-5 w-5" />
            <span>{entry.data.author}</span>
          </div>
        </div>

        {
          entry.data.tags && entry.data.tags.length > 0 && (
            <div class="animate-in fade-in slide-in-from-bottom-2 fill-mode-both mb-8 flex flex-wrap gap-2 delay-500 duration-500">
              {entry.data.tags.map((tag) => (
                <span class="text-primary/70 inline-flex items-center gap-1 px-3 py-1 text-sm">
                  <Tag className="w-3 h-3" />
                  {tag}
                </span>
              ))}
            </div>
          )
        }

        <p
          transition:name={`blog-description-${entry.slug}`}
          transition:animate="initial"
          class="text-muted-foreground text-xl"
        >
          {entry.data.description}
        </p>
      </div>
      <div
        class="from-brand-primary to-brand-secondary absolute right-0 bottom-0 left-0 h-2 bg-linear-to-br"
      >
      </div>
    </section>

    <!-- Blog Post Content -->
    <article class="px-4 py-12 sm:px-6 lg:px-8">
      <div
        class="animate-in fade-in slide-in-from-bottom-4 fill-mode-both mx-auto max-w-4xl delay-200 duration-700"
      >
        <div class="prose prose-neutral prose-lg dark:prose-invert max-w-none">
          <Content />
        </div>
      </div>
    </article>

    <!-- Related CTA Section -->
    <section class="px-4 py-24 sm:px-6 lg:px-8">
      <div class="glass mx-auto max-w-4xl rounded-2xl p-12 text-center">
        <h2 class="text-foreground mb-4 text-3xl font-bold md:text-4xl">
          Ready to Implement These Solutions?
        </h2>
        <p class="text-muted-foreground mb-8 text-xl">
          Our team can help you apply these best practices to your business
          infrastructure.
        </p>
        <div class="flex flex-col justify-center gap-4 sm:flex-row">
          <a
            href="/contact"
            class="bg-primary text-primary-foreground hover:bg-primary/90 inline-flex items-center justify-center gap-2 rounded-md px-8 py-3 text-sm font-medium shadow-sm transition-colors"
          >
            Contact Us
            <Mail className="h-4 w-4" aria-hidden="true" />
          </a>
          <a
            href="/blog"
            class="bg-card text-foreground border-input hover:bg-accent inline-flex items-center justify-center rounded-md border px-8 py-3 text-sm font-medium transition-colors"
          >
            Read More Articles
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
