---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation";
import ContactChat from "../components/ContactChat";
import { getNavigationData } from "@/lib/navigation-data";
import { Logo } from "@/components/Logo";
import { Phone, Mail, Clock, MapPin } from "lucide-react";

const { servicesData, recentPosts } = await getNavigationData();
---

<Layout title="Contact Us - BDK Inc">
  <Navigation client:load services={servicesData} blogPosts={recentPosts} />
  <main class="relative min-h-screen -mt-16 pt-16">
    {/* Gradient background */}
    <div class="absolute inset-0 gradient-mesh"></div>

    {/* Circuit board pattern overlay */}
    <div class="absolute inset-0 opacity-40 circuit-overlay"></div>

    {/* Content */}
    <div class="relative z-10">
      {/* Header Section */}
      <section class="py-24 text-center">
        <div class="max-w-7xl mx-auto space-y-8">
          <h1 class="text-5xl md:text-6xl font-bold tracking-tight">
            <span class="text-foreground">Let's </span>
            <span
              class="bg-linear-to-br from-brand-primary to-brand-secondary bg-clip-text text-transparent"
            >
              Connect
            </span>
          </h1>

          <p
            class="max-w-2xl mx-auto text-xl md:text-2xl text-muted-foreground dark:text-cyan-100"
          >
            Ready to transform your IT infrastructure? Our team is here to help
            24/7.
          </p>
        </div>
      </section>

      {/* Contact Form and Info Section */}
      <section class="pb-16 px-4 sm:px-6 lg:px-8">
        <div class="max-w-5xl mx-auto space-y-8">
          {/* AI Chat Interface - Centered */}
          <div>
            <h2 class="text-2xl font-bold mb-6 text-center">
              <span class="text-foreground">Send us a </span>
              <span
                class="bg-linear-to-br from-brand-primary to-brand-secondary bg-clip-text text-transparent"
              >
                Message
              </span>
            </h2>
            <ContactChat client:only="react" />
          </div>

          {/* Contact Information - Horizontal Layout */}
          <div class="glass rounded-xl p-8">
            <h3 class="text-xl font-bold text-foreground mb-6 text-center">
              Other Ways to Reach Us
            </h3>
            <div
              class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 md:gap-8"
            >
              {/* Phone */}
              <div class="flex flex-col items-center text-center group">
                <div
                  class="w-12 h-12 rounded-full bg-brand-primary/10 flex items-center justify-center mb-3 group-hover:bg-brand-primary/20 transition-colors"
                >
                  <Phone className="w-6 h-6 text-brand-primary" />
                </div>
                <p class="text-sm text-muted-foreground mb-2">Phone</p>
                <a
                  href="tel:8003090004"
                  class="text-brand-primary hover:underline font-medium text-sm"
                >
                  (800) 309-0004
                </a>
              </div>

              {/* Email */}
              <div class="flex flex-col items-center text-center group">
                <div
                  class="w-12 h-12 rounded-full bg-brand-primary/10 flex items-center justify-center mb-3 group-hover:bg-brand-primary/20 transition-colors"
                >
                  <Mail className="w-6 h-6 text-brand-primary" />
                </div>
                <p class="text-sm text-muted-foreground mb-2">Email</p>
                <a
                  href="mailto:info@bdkinc.com"
                  class="text-brand-primary hover:underline font-medium text-sm break-all"
                >
                  info@bdkinc.com
                </a>
              </div>

              {/* Location */}
              <div class="flex flex-col items-center text-center group">
                <div
                  class="w-12 h-12 rounded-full bg-brand-primary/10 flex items-center justify-center mb-3 group-hover:bg-brand-primary/20 transition-colors"
                >
                  <MapPin className="w-6 h-6 text-brand-primary" />
                </div>
                <p class="text-sm text-muted-foreground mb-2">Location</p>
                <a
                  href="https://www.google.com/maps/search/?api=1&query=29515+Canvasback+Drive+Easton+MD+21601"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-brand-primary hover:underline font-medium text-sm"
                >
                  Get Directions
                </a>
              </div>

              {/* Hours */}
              <div class="flex flex-col items-center text-center group">
                <div
                  class="w-12 h-12 rounded-full bg-brand-primary/10 flex items-center justify-center mb-3 group-hover:bg-brand-primary/20 transition-colors"
                >
                  <Clock className="w-6 h-6 text-brand-primary" />
                </div>
                <p class="text-sm text-muted-foreground mb-2">Hours</p>
                <p class="text-foreground flex items-center gap-2 text-sm">
                  <span class="w-2 h-2 bg-green-500 rounded-full"></span>
                  24/7 Support
                </p>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  </main>

  {/* Footer */}
  <footer class="border-t border-input py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto text-center flex flex-col items-center">
      <div>
        <Logo />
      </div>
      <p class="text-muted-foreground mb-4">
        Your trusted technology partner since 1999
      </p>
      <p class="text-sm text-muted-foreground/70">
        &copy; {new Date().getFullYear()} BDK Inc. All rights reserved.
      </p>
    </div>
  </footer>
</Layout>
