---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation';
import { Card } from '@/components/ui/card';
import { getNavigationData } from '@/lib/navigation-data';
import Footer from '@/components/Footer.astro';
import { Scale } from 'lucide-react';

const { servicesData, recentPosts } = await getNavigationData();

const LAST_UPDATED = 'November 14, 2025';

const tocItems = [
  { id: 'agreement-to-terms', label: 'Agreement to Terms' },
  { id: 'services-description', label: 'Services Description' },
  { id: 'user-responsibilities', label: 'User Responsibilities' },
  { id: 'payment-terms', label: 'Payment Terms' },
  { id: 'service-level', label: 'Service Level' },
  { id: 'intellectual-property', label: 'Intellectual Property' },
  { id: 'confidentiality', label: 'Confidentiality' },
  { id: 'warranties-disclaimers', label: 'Warranties & Disclaimers' },
  { id: 'limitation-of-liability', label: 'Limitation of Liability' },
  { id: 'indemnification', label: 'Indemnification' },
  { id: 'term-termination', label: 'Term & Termination' },
  { id: 'dispute-resolution', label: 'Dispute Resolution' },
  { id: 'general-provisions', label: 'General Provisions' },
  { id: 'contact-information', label: 'Contact Information' },
];
---

<Layout
  title="Terms of Service | BDKinc"
  description="Review the terms and conditions that govern your use of BDKinc's services and website."
>
  <Navigation
    client:load
    services={servicesData}
    blogPosts={recentPosts}
    currentPath={Astro.url.pathname}
  />
  <main id="main-content">
    {/* Hero Section */}
    <section class="relative overflow-hidden px-4 pt-24 pb-12 sm:px-6 lg:px-8">
      <div class="gradient-mesh absolute inset-0 opacity-30"></div>
      <div class="circuit-overlay absolute inset-0 opacity-40"></div>
      <div class="relative z-10 mx-auto max-w-4xl text-center">
        <div class="mb-6 inline-flex items-center justify-center rounded-lg bg-primary/10 p-4">
          <Scale className="w-10 h-10 text-primary" />
        </div>
        <h1
          class="fill-mode-both animate-in fade-in slide-in-from-bottom-8 mb-6 text-5xl font-bold duration-700 md:text-6xl"
        >
          <span class="text-foreground">Terms of </span>
          <span class="to-secondary from-primary bg-linear-to-br bg-clip-text text-transparent"
            >Service</span
          >
        </h1>
        <p
          class="text-muted-foreground fill-mode-both animate-in fade-in slide-in-from-bottom-6 mb-4 text-lg leading-relaxed delay-200 duration-700"
        >
          Please read these terms carefully before using BDKinc's services and website.
        </p>
        <p class="text-muted-foreground/70 text-sm">
          Last updated: {LAST_UPDATED}
        </p>
      </div>
    </section>

    {/* Content Section with Sidebar TOC */}
    <section class="px-4 py-12 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-7xl">
        <div class="grid gap-8 lg:grid-cols-4">
          {/* Sidebar TOC */}
          <aside class="lg:col-span-1">
            <div class="sticky top-24">
              <Card
                className="fill-mode-both animate-in fade-in slide-in-from-left-8 duration-700"
                size="lg"
                interactive={false}
              >
                <nav class="space-y-1">
                  <p class="text-foreground mb-4 text-sm font-semibold uppercase tracking-widest"
                    >On this page</p
                  >
                  <ul class="space-y-2">
                    {
                      tocItems.map((item) => (
                        <li>
                          <a
                            href={`#${item.id}`}
                            class="text-muted-foreground hover:text-primary text-sm transition-colors duration-200 block py-1"
                          >
                            {item.label}
                          </a>
                        </li>
                      ))
                    }
                  </ul>
                </nav>
              </Card>
            </div>
          </aside>

          {/* Main Content */}
          <article class="lg:col-span-3 space-y-12">
            {/* 1. Agreement to Terms */}
            <section id="agreement-to-terms">
              <h2 class="text-foreground mb-4 text-3xl font-bold">
                <span class="text-primary">1.</span> Agreement to Terms
              </h2>
              <p class="text-muted-foreground leading-relaxed">
                By accessing and using this website and BDKinc's services, you agree to be bound by these Terms of Service. If you do not agree with any part of these terms, you may not use our services. We reserve the right to modify these terms at any time, and your continued use of our services constitutes acceptance of any changes.
              </p>
            </section>

            {/* 2. Services Description */}
            <section id="services-description">
              <h2 class="text-foreground mb-4 text-3xl font-bold">
                <span class="text-primary">2.</span> Services Description
              </h2>
              <p class="text-muted-foreground mb-4 leading-relaxed">
                BDKinc provides managed IT services, cloud hosting, cybersecurity solutions, and related technology services as described on our website. We reserve the right to modify, suspend, or discontinue any service or feature at our discretion, with reasonable notice to our clients.
              </p>
              <p class="text-muted-foreground leading-relaxed">
                Our services are provided on an "as-is" basis. We do not warrant that services will be uninterrupted, error-free, or free from viruses or harmful components.
              </p>
            </section>

            {/* 3. User Responsibilities */}
            <section id="user-responsibilities">
              <h2 class="text-foreground mb-4 text-3xl font-bold">
                <span class="text-primary">3.</span> User Responsibilities
              </h2>
              <p class="text-muted-foreground mb-4 leading-relaxed">
                As a user of our services, you agree to:
              </p>
              <ul class="text-muted-foreground space-y-2 ml-4">
                <li class="flex gap-3">
                  <span class="text-primary flex-shrink-0">•</span>
                  <span>Use our services lawfully and in compliance with all applicable regulations</span>
                </li>
                <li class="flex gap-3">
                  <span class="text-primary flex-shrink-0">•</span>
                  <span>Not engage in any activity that disrupts or interferes with our services</span>
                </li>
                <li class="flex gap-3">
                  <span class="text-primary flex-shrink-0">•</span>
                  <span>Maintain the confidentiality of your account credentials</span>
                </li>
                <li class="flex gap-3">
                  <span class="text-primary flex-shrink-0">•</span>
                  <span>Not attempt unauthorized access to our systems or networks</span>
                </li>
                <li class="flex gap-3">
                  <span class="text-primary flex-shrink-0">•</span>
                  <span>Notify us immediately of any unauthorized use of your account</span>
                </li>
              </ul>
            </section>

            {/* 4. Payment Terms */}
            <section id="payment-terms">
              <h2 class="text-foreground mb-4 text-3xl font-bold">
                <span class="text-primary">4.</span> Payment Terms
              </h2>
              <p class="text-muted-foreground mb-4 leading-relaxed">
                Payment for services shall be made according to the terms specified in your service agreement. Invoices are typically issued monthly or as per the agreed billing cycle. Payment is due within the timeframe specified on the invoice, typically 30 days from invoice date.
              </p>
              <p class="text-muted-foreground mb-4 leading-relaxed">
                Late payments may result in suspension of services and additional charges. We reserve the right to pursue collection action for overdue accounts.
              </p>
              <p class="text-muted-foreground leading-relaxed">
                All fees are exclusive of applicable taxes, which will be added where required by law.
              </p>
            </section>

            {/* 5. Service Level */}
            <section id="service-level">
              <h2 class="text-foreground mb-4 text-3xl font-bold">
                <span class="text-primary">5.</span> Service Level
              </h2>
              <p class="text-muted-foreground mb-4 leading-relaxed">
                BDKinc strives to maintain high availability and reliability. Specific service level commitments, including uptime guarantees and support response times, are defined in your individual service agreement or Service Level Agreement (SLA).
              </p>
              <p class="text-muted-foreground leading-relaxed">
                Service interruptions due to scheduled maintenance, force majeure events, or circumstances beyond our reasonable control are excluded from SLA calculations. We will provide advance notice of planned maintenance when possible.
              </p>
            </section>

            {/* 6. Intellectual Property */}
            <section id="intellectual-property">
              <h2 class="text-foreground mb-4 text-3xl font-bold">
                <span class="text-primary">6.</span> Intellectual Property
              </h2>
              <p class="text-muted-foreground mb-4 leading-relaxed">
                All content on our website and within our services, including text, graphics, logos, images, and software, is the property of BDKinc or our content providers and is protected by copyright and other intellectual property laws.
              </p>
              <p class="text-muted-foreground leading-relaxed">
                You may not reproduce, distribute, modify, or transmit any content without our prior written permission. We grant you a limited license to view and use our website for personal, non-commercial purposes only.
              </p>
            </section>

            {/* 7. Confidentiality */}
            <section id="confidentiality">
              <h2 class="text-foreground mb-4 text-3xl font-bold">
                <span class="text-primary">7.</span> Confidentiality
              </h2>
              <p class="text-muted-foreground mb-4 leading-relaxed">
                Both parties agree to maintain the confidentiality of any sensitive or proprietary information disclosed during the course of our business relationship. This includes client data, security protocols, and business strategies.
              </p>
              <p class="text-muted-foreground leading-relaxed">
                BDKinc implements industry-standard security measures to protect confidential information. However, we are not liable for unauthorized disclosure due to circumstances beyond our reasonable control.
              </p>
            </section>

            {/* 8. Warranties & Disclaimers */}
            <section id="warranties-disclaimers">
              <h2 class="text-foreground mb-4 text-3xl font-bold">
                <span class="text-primary">8.</span> Warranties & Disclaimers
              </h2>
              <p class="text-muted-foreground mb-4 leading-relaxed">
                We warrant that our services will be provided in a professional and workmanlike manner in accordance with industry standards. However, we make no other warranties, express or implied, including warranties of merchantability, fitness for a particular purpose, or non-infringement.
              </p>
              <p class="text-muted-foreground leading-relaxed">
                Our website and services are provided "as-is" without any representations or warranties. We do not warrant that services will be error-free, uninterrupted, or secure.
              </p>
            </section>

            {/* 9. Limitation of Liability */}
            <section id="limitation-of-liability">
              <h2 class="text-foreground mb-4 text-3xl font-bold">
                <span class="text-primary">9.</span> Limitation of Liability
              </h2>
              <p class="text-muted-foreground mb-4 leading-relaxed">
                To the extent permitted by law, BDKinc shall not be liable for any indirect, incidental, special, consequential, or punitive damages, including loss of data, revenue, or profits, even if advised of the possibility of such damages.
              </p>
              <p class="text-muted-foreground leading-relaxed">
                Our total liability for any claim arising from your use of our services shall not exceed the amount paid by you to BDKinc in the 12 months preceding the claim.
              </p>
            </section>

            {/* 10. Indemnification */}
            <section id="indemnification">
              <h2 class="text-foreground mb-4 text-3xl font-bold">
                <span class="text-primary">10.</span> Indemnification
              </h2>
              <p class="text-muted-foreground leading-relaxed">
                You agree to indemnify, defend, and hold harmless BDKinc, our officers, directors, and employees from any claims, damages, losses, or expenses (including legal fees) arising from your use of our services, violation of these terms, or infringement of any third-party rights.
              </p>
            </section>

            {/* 11. Term & Termination */}
            <section id="term-termination">
              <h2 class="text-foreground mb-4 text-3xl font-bold">
                <span class="text-primary">11.</span> Term & Termination
              </h2>
              <p class="text-muted-foreground mb-4 leading-relaxed">
                Your use of our website is subject to these terms and may be terminated at any time. Service agreements have terms as specified in the contract. Either party may terminate services with written notice as per the agreement terms.
              </p>
              <p class="text-muted-foreground leading-relaxed">
                Upon termination, your rights to use our services cease immediately, and we may delete your account and associated data as per our retention policies.
              </p>
            </section>

            {/* 12. Dispute Resolution */}
            <section id="dispute-resolution">
              <h2 class="text-foreground mb-4 text-3xl font-bold">
                <span class="text-primary">12.</span> Dispute Resolution
              </h2>
              <p class="text-muted-foreground mb-4 leading-relaxed">
                Any disputes arising from these terms or our services shall first be addressed through good-faith negotiation between the parties. If informal resolution fails, disputes may be subject to mediation or binding arbitration as specified in your service agreement.
              </p>
              <p class="text-muted-foreground leading-relaxed">
                These terms and any disputes shall be governed by the laws of the jurisdiction specified in your service agreement, excluding conflicts of law principles.
              </p>
            </section>

            {/* 13. General Provisions */}
            <section id="general-provisions">
              <h2 class="text-foreground mb-4 text-3xl font-bold">
                <span class="text-primary">13.</span> General Provisions
              </h2>
              <p class="text-muted-foreground mb-4 leading-relaxed">
                If any provision of these terms is found to be unenforceable or invalid, the remaining provisions shall continue in effect. Our failure to enforce any right does not constitute a waiver of such right.
              </p>
              <p class="text-muted-foreground mb-4 leading-relaxed">
                These terms constitute the entire agreement between you and BDKinc regarding the use of our services and supersede all prior agreements. Any modifications must be made in writing and signed by authorized representatives.
              </p>
              <p class="text-muted-foreground leading-relaxed">
                We may transfer our rights and obligations under these terms to a third party upon written notice. Your rights cannot be transferred without our prior written consent.
              </p>
            </section>

            {/* 14. Contact Information */}
            <section id="contact-information">
              <h2 class="text-foreground mb-4 text-3xl font-bold">
                <span class="text-primary">14.</span> Contact Information
              </h2>
              <p class="text-muted-foreground mb-6 leading-relaxed">
                If you have questions or concerns about these Terms of Service, please contact us:
              </p>
              <Card
                className="bg-card/50 border-primary/20"
                size="lg"
                interactive={false}
              >
                <div class="space-y-3">
                  <div>
                    <p class="text-foreground font-semibold">BDKinc Legal Department</p>
                  </div>
                  <div>
                    <p class="text-muted-foreground text-sm">Email:</p>
                    <a
                      href="mailto:info@bdkinc.com"
                      class="text-primary hover:text-primary/80 transition-colors"
                    >
                      info@bdkinc.com
                    </a>
                  </div>
                  <div>
                    <p class="text-muted-foreground text-sm">Phone:</p>
                    <a
                      href="tel:+18003090004"
                      class="text-primary hover:text-primary/80 transition-colors"
                    >
                      +1 (800) 309-0004
                    </a>
                  </div>
                </div>
              </Card>
            </section>
          </article>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
