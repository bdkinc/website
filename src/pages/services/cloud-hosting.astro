---
import { getCollection, getEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation';
import { getNavigationData } from '@/lib/navigation-data';
import { iconMap } from '@/lib/icons';
import { ServiceCard, ServiceCardGrid } from '@/components/ServiceCard';
import ImpactMetricsSection from '@/components/ImpactMetricsSection.astro';
import CTASection from '@/components/CTASection';
import { Card } from '@/components/ui/card';
import {
  Shield,
  DollarSign,
  RefreshCw,
  Users,
  Lock,
  Zap,
  Cloud,
  ArrowLeftRight,
  Clock,
  CheckCircle2,
} from 'lucide-react';
import Footer from '@/components/Footer.astro';

const service = await getEntry('services', 'cloud-hosting');
if (!service) {
  return new Response(null, { status: 404 });
}
const { servicesData, recentPosts } = await getNavigationData();
const IconComponent = iconMap[service.data.icon];
const title = service.data.title;
const titleWords = title.split(' ');
const lastTitleWord = titleWords.pop();
const titleFirst = titleWords.join(' ');

const _serviceSchema = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  name: service.data.title,
  description:
    'Cloud hosting, migration, and hybrid infrastructure management from BDKinc with security-first architecture and 24/7 support.',
  provider: {
    '@type': 'Organization',
    name: 'BDKinc',
    url: 'https://www.bdkinc.com',
  },
  serviceType: 'Cloud Hosting & Migration',
};

const relatedTags = ['cloud', 'security', 'infrastructure'];
const relatedPosts = (await getCollection('blog', ({ data }) => !data.draft))
  .filter((post) => post.data.tags?.some((tag) => relatedTags.includes(tag)))
  .slice(0, 3);

const metrics = [
  { value: '99.95%', label: 'UPTIME SLA', icon: Shield },
  { value: '75+', label: 'CLOUD MIGRATIONS', icon: ArrowLeftRight },
  { value: '1.5PB', label: 'DATA MANAGED', icon: Cloud },
  { value: '24/7', label: 'OPERATIONS CENTER', icon: Clock },
];

const detailColumns = [
  {
    title: 'Migration Strategy',
    icon: ArrowLeftRight,
    items: [
      'Assessment workshops align cloud targets with business priorities',
      'Migration sprints minimize downtime and validate performance',
      'Cutover playbooks protect data integrity during transitions',
    ],
  },
  {
    title: 'Managed Operations',
    icon: RefreshCw,
    items: [
      'Proactive monitoring resolves issues before they impact users',
      'Cost optimization reviews keep monthly spend under control',
      'Security baselines enforce compliance across every workload',
    ],
  },
];
---

<Layout
  title={`${service.data.title} & Migration Experts | BDKinc`}
  description="Secure cloud hosting, migration, and hybrid infrastructure management for regulated and growth-oriented organizations across the Mid-Atlantic."
  ogDescription="BDKinc designs and manages cloud hosting environments with compliance-grade security, predictable costs, and 24/7 support across private, public, and hybrid clouds."
>
  <script type="application/ld+json">
    {JSON.stringify(_serviceSchema)}
  </script>
  <Navigation
    client:load
    services={servicesData}
    blogPosts={recentPosts}
    currentPath={Astro.url.pathname}
  />
  <main id="main-content">
    <!-- Hero Section -->
    <section class="relative overflow-hidden px-4 pt-24 pb-12 sm:px-6 lg:px-8">
      <div class="gradient-mesh absolute inset-0 opacity-30"></div>
      <div class="circuit-overlay absolute inset-0 opacity-40"></div>
      <div class="relative z-10 mx-auto max-w-7xl">
        <div class="text-center">
          <div
            class="from-primary/10 to-secondary/10 mb-6 inline-flex items-center justify-center rounded-2xl bg-linear-to-br p-4 delay-100 duration-500"
            transition:name={`service-icon-${service.id}`}
          >
            <IconComponent className="text-primary h-12 w-12" aria-hidden="true" />
          </div>
          <h1
            class="mb-6 text-5xl font-bold md:text-6xl"
            transition:name={`service-title-${service.id}`}
            transition:animate="initial"
          >
            <span class="text-foreground"
              >{titleFirst ? `${titleFirst} ` : ''}</span
            >
            <span
              class="from-primary to-secondary bg-linear-to-br bg-clip-text text-transparent"
              >{lastTitleWord}</span
            >
          </h1>
          <p
            transition:name={`service-description-${service.id}`}
            transition:animate="initial"
            class="text-muted-foreground mx-auto max-w-3xl text-xl mb-12"
          >
            {service.data.description}
          </p>
        </div>

        {/* Hero Image Placeholder */}
        <div class="fill-mode-both animate-in fade-in zoom-in delay-300 duration-700">
          <div class="glass mx-auto max-w-5xl overflow-hidden rounded-2xl border border-primary/20 shadow-lg">
            <div class="bg-linear-to-br from-primary/5 via-secondary/5 to-primary/5 flex aspect-video items-center justify-center">
              <div class="text-center">
                <div class="text-muted-foreground/40 mb-2 text-sm font-medium uppercase tracking-wider">Service Hero Image</div>
                <div class="text-muted-foreground/60 text-lg">Cloud Hosting Illustration</div>
                <div class="text-muted-foreground/40 mt-2 text-xs">Recommended: 1400x800px</div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div
        class="from-brand-primary to-brand-secondary absolute right-0 bottom-0 left-0 h-2 bg-linear-to-br"
      >
      </div>
    </section>

    <!-- Content Section -->
    <section class="px-4 py-24 sm:px-6 lg:px-8">
      <div
        class="animate-in fade-in slide-in-from-bottom-4 fill-mode-both space-y-12 delay-600 duration-700"
      >
        <div class="mx-auto max-w-7xl">
          <div class="service-content-wrapper">
            <div class="not-prose mx-auto max-w-4xl">
              <h2 class="text-foreground mb-6 text-center text-3xl font-bold">
                Any Cloud Configuration. Any Provider. Anywhere.
              </h2>
              <div
                class="text-muted-foreground mb-10 text-center text-lg leading-relaxed"
              >
                At BDK, we specialize in designing and implementing cloud
                hosting solutions tailored to your business needs. Whether
                you're looking to migrate existing workloads or build new
                applications in the cloud, our team of experts will guide you
                through every step of the process. We offer flexible deployment
                options across private, public, and hybrid cloud environments,
                ensuring you get the right solution for your unique
                requirements.
              </div>
            </div>

            <h3 class="text-foreground mb-6 text-center text-2xl font-bold">
              Cloud Deployment Options
            </h3>

            <ServiceCardGrid>
              <ServiceCard>
                <div class="mb-6">
                  <Lock className="text-primary h-16 w-16" aria-hidden="true" />
                </div>
                <h4 class="text-foreground mb-4 text-2xl font-bold">
                  Private Cloud
                </h4>
                <div class="text-foreground leading-relaxed">
                  Dedicated infrastructure with complete control. Perfect for
                  regulated industries and sensitive workloads.
                </div>
              </ServiceCard>

              <ServiceCard>
                <div class="mb-6">
                  <ArrowLeftRight className="text-primary h-16 w-16" aria-hidden="true" />
                </div>
                <h4 class="text-foreground mb-4 text-2xl font-bold">
                  Hybrid Cloud
                </h4>
                <div class="text-foreground leading-relaxed">
                  Seamlessly integrate private and public resources. Move
                  workloads dynamically based on your needs.
                </div>
              </ServiceCard>

              <ServiceCard>
                <div class="mb-6">
                  <Cloud className="text-primary h-16 w-16" aria-hidden="true" />
                </div>
                <h4 class="text-foreground mb-4 text-2xl font-bold">
                  Public Cloud
                </h4>
                <div class="text-foreground leading-relaxed">
                  Scalable solutions on AWS, Azure, Google Cloud, or IBM Cloud
                  optimized for cost and performance.
                </div>
              </ServiceCard>
            </ServiceCardGrid>

            <h3
              class="text-foreground mt-12 mb-6 text-center text-2xl font-bold"
            >
              Multi-Provider Expertise
            </h3>

            <div class="not-prose mb-20">
              <p class="text-muted-foreground mb-10 text-center text-xl">
                We're cloud-agnostic experts who work with:
              </p>

              {/* Feature Image Placeholder */}
              <div class="mb-10">
                <div class="glass mx-auto max-w-3xl overflow-hidden rounded-xl border border-primary/20">
                  <div class="bg-linear-to-br from-primary/5 via-secondary/5 to-primary/5 flex aspect-21/9 items-center justify-center">
                    <div class="text-center p-4">
                      <div class="text-muted-foreground/40 mb-1 text-xs font-medium uppercase tracking-wider">Feature Image</div>
                      <div class="text-muted-foreground/60 text-sm">Benefits Illustration</div>
                      <div class="text-muted-foreground/40 mt-1 text-[10px]">1200x500px</div>
                    </div>
                  </div>
                </div>
              </div>

              <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
                <div
                  class="bg-background/50 border-border hover:border-primary flex items-start gap-4 rounded-lg border p-4 transition-colors"
                >
                  <div class="bg-primary mt-2 h-2 w-2 shrink-0 rounded-full">
                  </div>
                  <div>
                    <h5 class="text-foreground mb-1 text-lg font-bold">
                      BDK Datacenter Locations
                    </h5>
                    <div class="text-muted-foreground text-sm">
                      Our own secure, reliable infrastructure
                    </div>
                  </div>
                </div>

                <div
                  class="bg-background/50 border-border hover:border-primary flex items-start gap-4 rounded-lg border p-4 transition-colors"
                >
                  <div class="bg-primary mt-2 h-2 w-2 shrink-0 rounded-full">
                  </div>
                  <div>
                    <h5 class="text-foreground mb-1 text-lg font-bold">
                      IBM Cloud
                    </h5>
                    <div class="text-muted-foreground text-sm">
                      Enterprise-grade cloud with deep Power Systems integration
                    </div>
                  </div>
                </div>

                <div
                  class="bg-background/50 border-border hover:border-primary flex items-start gap-4 rounded-lg border p-4 transition-colors"
                >
                  <div class="bg-primary mt-2 h-2 w-2 shrink-0 rounded-full">
                  </div>
                  <div>
                    <h5 class="text-foreground mb-1 text-lg font-bold">AWS</h5>
                    <div class="text-muted-foreground text-sm">
                      Industry-leading scalability and service breadth
                    </div>
                  </div>
                </div>

                <div
                  class="bg-background/50 border-border hover:border-primary flex items-start gap-4 rounded-lg border p-4 transition-colors"
                >
                  <div class="bg-primary mt-2 h-2 w-2 shrink-0 rounded-full">
                  </div>
                  <div>
                    <h5 class="text-foreground mb-1 text-lg font-bold">
                      Microsoft Azure
                    </h5>
                    <div class="text-muted-foreground text-sm">
                      Seamless Microsoft ecosystem integration
                    </div>
                  </div>
                </div>

                <div
                  class="bg-background/50 border-border hover:border-primary flex items-start gap-4 rounded-lg border p-4 transition-colors"
                >
                  <div class="bg-primary mt-2 h-2 w-2 shrink-0 rounded-full">
                  </div>
                  <div>
                    <h5 class="text-foreground mb-1 text-lg font-bold">
                      Google Cloud Platform
                    </h5>
                    <div class="text-muted-foreground text-sm">
                      Advanced data analytics and AI capabilities
                    </div>
                  </div>
                </div>

                <div
                  class="bg-background/50 border-border hover:border-primary flex items-start gap-4 rounded-lg border p-4 transition-colors"
                >
                  <div class="bg-primary mt-2 h-2 w-2 shrink-0 rounded-full">
                  </div>
                  <div>
                    <h5 class="text-foreground mb-1 text-lg font-bold">
                      Other Providers
                    </h5>
                    <div class="text-muted-foreground text-sm">
                      We adapt to your preferred platform
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <h3 class="text-foreground mb-6 text-center text-2xl font-bold">
              Our Approach
            </h3>

            <div class="not-prose mb-20">
              <div class="grid gap-8 md:grid-cols-2 items-center">
                {/* Approach Image Placeholder */}
                <div class="order-2 md:order-1">
                  <div class="glass overflow-hidden rounded-xl border border-primary/20">
                    <div class="bg-linear-to-br from-primary/5 via-secondary/5 to-primary/5 flex aspect-square items-center justify-center">
                      <div class="text-center p-4">
                        <div class="text-muted-foreground/40 mb-1 text-xs font-medium uppercase tracking-wider">Approach Visual</div>
                        <div class="text-muted-foreground/60 text-sm">Workflow Diagram</div>
                        <div class="text-muted-foreground/40 mt-1 text-[10px]">800x800px</div>
                      </div>
                    </div>
                  </div>
                </div>

                {/* Approach Text */}
                <div class="order-1 md:order-2">
                  <div class="glass border-border rounded-xl border p-8">
                    <div class="text-muted-foreground text-lg leading-relaxed space-y-4">
                      <p>
                        Moving to the cloud or reconfiguring your existing environment
                        doesn't have to be disruptive.
                      </p>
                      <p>
                        Our experienced team handles the entire process—planning, migration, optimization, and
                        ongoing management.
                      </p>
                      <p>
                        We ensure your data and applications transfer smoothly with minimal downtime while maintaining
                        business continuity.
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <h3 class="text-foreground mb-6 text-center text-2xl font-bold">
              Key Benefits
            </h3>

            <div class="not-prose mb-20 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
                <Card size="default" interactive={false} className="flex flex-col items-center text-center">
                  <div class="mb-4">
                    <Shield className="text-primary h-10 w-10" aria-hidden="true" />
                  </div>
                  <h4 class="text-foreground mb-2 text-xl font-bold">
                    Enhanced Reliability
                  </h4>
                  <div class="text-muted-foreground">
                    Redundancy capabilities prevent downtime and protect your
                    critical business data
                  </div>
                </Card>

                <Card size="default" interactive={false} className="flex flex-col items-center text-center">
                  <div class="mb-4">
                    <DollarSign className="text-primary h-10 w-10" aria-hidden="true" />
                  </div>
                  <h4 class="text-foreground mb-2 text-xl font-bold">
                    Cost Efficiency
                  </h4>
                  <div class="text-muted-foreground">
                    Reduce capital expenses by moving from physical infrastructure
                    to flexible cloud solutions
                  </div>
                </Card>

                <Card size="default" interactive={false} className="flex flex-col items-center text-center">
                  <div class="mb-4">
                    <RefreshCw className="text-primary h-10 w-10" aria-hidden="true" />
                  </div>
                  <h4 class="text-foreground mb-2 text-xl font-bold">
                    Business Continuity
                  </h4>
                  <div class="text-muted-foreground">
                    Built-in disaster recovery and backup solutions keep your
                    business running
                  </div>
                </Card>

                <Card size="default" interactive={false} className="flex flex-col items-center text-center">
                  <div class="mb-4">
                    <Users className="text-primary h-10 w-10" aria-hidden="true" />
                  </div>
                  <h4 class="text-foreground mb-2 text-xl font-bold">
                    Expert Support
                  </h4>
                  <div class="text-muted-foreground">
                    60+ years of combined experience in cloud infrastructure and
                    migration
                  </div>
                </Card>

                <Card size="default" interactive={false} className="flex flex-col items-center text-center">
                  <div class="mb-4">
                    <Lock className="text-primary h-10 w-10" aria-hidden="true" />
                  </div>
                  <h4 class="text-foreground mb-2 text-xl font-bold">Security</h4>
                  <div class="text-muted-foreground">
                    Enterprise-grade security controls protect your data in the
                    cloud
                  </div>
                </Card>

                <Card size="default" interactive={false} className="flex flex-col items-center text-center">
                  <div class="mb-4">
                    <Zap className="text-primary h-10 w-10" aria-hidden="true" />
                  </div>
                  <h4 class="text-foreground mb-2 text-xl font-bold">
                    Flexibility
                  </h4>
                  <div class="text-muted-foreground">
                    Choose from public, private, or hybrid cloud configurations
                  </div>
                </Card>
              </div>

            <div class="not-prose mb-20 grid gap-8 md:grid-cols-2">
              {detailColumns.map((column) => (
                <div class="glass border-border rounded-2xl border p-8">
                  <div class="mb-6 flex items-center gap-3">
                    <column.icon className="text-primary h-8 w-8" aria-hidden="true" />
                    <h4 class="text-foreground text-2xl font-bold">
                      {column.title}
                    </h4>
                  </div>
                  <div class="text-muted-foreground space-y-3">
                    {column.items.map((item) => (
                      <div class="flex items-start gap-2">
                        <CheckCircle2
                          className="text-primary mt-1 h-5 w-5 shrink-0"
                          aria-hidden="true"
                        />
                        <span>{item}</span>
                      </div>
                    ))}
                  </div>
                </div>
              ))}
            </div>

            <h3 class="text-foreground mb-6 text-center text-2xl font-bold">
              Why Choose BDK for Cloud Hosting?
            </h3>

            <div class="text-center">
              <div
                class="text-muted-foreground mx-auto mb-6 max-w-4xl text-lg leading-relaxed"
              >
                We bring decades of experience to every cloud project. Our team
                understands the complexities of cloud migration and the
                importance of maintaining business operations throughout the
                transition. We don't just move your data—we optimize your entire
                cloud environment for performance, security, and
                cost-effectiveness.
              </div>
              <div class="text-primary text-xl font-semibold">
                From initial planning to ongoing management, we're your partner
                in cloud success.
              </div>
            </div>
          </div>
        </div>

        <ImpactMetricsSection metrics={metrics} />

        {relatedPosts.length > 0 && (
          <section class="mx-auto max-w-5xl">
            <h2 class="text-foreground mb-6 text-center text-3xl font-bold">
              Related Resources
            </h2>
            <div class="grid gap-6 md:grid-cols-3">
              {relatedPosts.map((post) => (
                <a
                  href={`/blog/${post.slug}`}
                  class="border-border hover:border-primary flex flex-col rounded-xl border p-6 transition-colors"
                >
                  <h3 class="text-foreground mb-2 text-lg font-semibold">
                    {post.data.title}
                  </h3>
                  <p class="text-muted-foreground text-sm">
                    {post.data.description}
                  </p>
                  <span class="text-primary mt-4 text-sm font-medium">
                    Read Article →
                  </span>
                </a>
              ))}
            </div>
          </section>
        )}

        <CTASection
          client:visible
          title="Ready to Transform Your IT?"
          description={`Let's discuss how ${service.data.title.toLowerCase()} can help your business thrive with reliable, scalable technology solutions.`}
          buttonText="Get in Touch"
          buttonHref="/contact?from=cloud-hosting"
        />
      </div>
    </section>
  </main>

  <Footer />
</Layout>
