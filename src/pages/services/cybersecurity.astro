---
import { getEntry } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Navigation from "../../components/Navigation";
import { getNavigationData } from "@/lib/navigation-data";
import { iconMap } from "@/lib/icons";
import { ServiceCard, ServiceCardGrid } from '@/components/ServiceCard';
import {
  Shield,
  Lock,
  AlertTriangle,
  FileCheck,
  Eye,
  HardDrive,
  CheckCircle2,
  Bell,
  RefreshCw,
  ShieldCheck,
  Users,
} from "lucide-react";

const service = await getEntry('services', 'cybersecurity');
if (!service) {
  return new Response(null, { status: 404 });
}
const { servicesData, recentPosts } = await getNavigationData();
const IconComponent = iconMap[service.data.icon];
---

<Layout title={`${service.data.title} - BDK Inc`} description={service.data.description}>
  <Navigation client:load services={servicesData} blogPosts={recentPosts} currentPath={Astro.url.pathname} />
  <main id="main-content">
    <!-- Hero Section -->
    <section class="relative overflow-hidden px-4 pt-24 pb-12 sm:px-6 lg:px-8">
      <div class="gradient-mesh absolute inset-0 opacity-30"></div>
      <div class="circuit-overlay absolute inset-0 opacity-40"></div>
      <div class="relative z-10 mx-auto max-w-7xl text-center">
        <div 
          class="inline-flex items-center justify-center p-4 rounded-2xl bg-linear-to-brr from-primary/10 to-secondary/10 mb-6"
          transition:name={`service-icon-${service.id}`}
        >
          <IconComponent className="w-12 h-12 text-primary" />
        </div>
        <h1 
          class="mb-6 text-5xl font-bold md:text-6xl"
          transition:name={`service-title-${service.id}`}
          transition:animate="initial"
        >
          <span class="bg-linear-to-br from-primary to-secondary bg-clip-text text-transparent">
            {service.data.title}
          </span>
        </h1>
        <p
          class="text-xl text-muted-foreground max-w-3xl mx-auto"
          transition:name={`service-description-${service.id}`}
          transition:animate="initial"
        >
          {service.data.description}
        </p>
      </div>
      <div class="from-brand-primary to-brand-secondary absolute right-0 bottom-0 left-0 h-2 bg-linear-to-br"></div>
    </section>

    <!-- Content Section -->
    <section class="px-4 py-24 sm:px-6 lg:px-8">
      <div class="max-w-7xl mx-auto">
          </div>

          <div class="space-y-12 animate-in fade-in slide-in-from-bottom-4 duration-700 delay-600 fill-mode-both">
