---
import { getCollection, getEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation';
import { getNavigationData } from '@/lib/navigation-data';
import { iconMap } from '@/lib/icons';
import { ServiceCard, ServiceCardGrid } from '@/components/ServiceCard';
import ImpactMetricsSection from '@/components/ImpactMetricsSection.astro';
import {
  Shield,
  Lock,
  AlertTriangle,
  FileCheck,
  Eye,
  HardDrive,
  CheckCircle2,
  Bell,
  RefreshCw,
  ShieldCheck,
  Users,
  Clock,
  Mail,
} from 'lucide-react';
import { Logo } from '@/components/Logo';

const service = await getEntry('services', 'cybersecurity');
if (!service) {
  return new Response(null, { status: 404 });
}
const { servicesData, recentPosts } = await getNavigationData();
const IconComponent = iconMap[service.data.icon];
const title = service.data.title;
const titleWords = title.split(' ');
const lastTitleWord = titleWords.pop();
const titleFirst = titleWords.join(' ');

const _serviceSchema = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  name: service.data.title,
  description:
    'Managed cybersecurity services from BDKinc including ransomware protection, compliance, monitoring, and incident response for Mid-Atlantic businesses.',
  provider: {
    '@type': 'Organization',
    name: 'BDKinc',
    url: 'https://www.bdkinc.com',
  },
  serviceType: 'Managed Cybersecurity Services',
  areaServed: ['Maryland', 'Delaware', 'Mid-Atlantic'],
};

const relatedTags = ['security', 'best-practices'];
const relatedPosts = (await getCollection('blog', ({ data }) => !data.draft))
  .filter((post) => post.data.tags?.some((tag) => relatedTags.includes(tag)))
  .slice(0, 3);

const metrics = [
  { value: '99.97%', label: 'THREAT PREVENTION', icon: Shield },
  { value: '15', label: 'MIN RESPONSE', icon: Clock },
  { value: '500K+', label: 'ALERTS BLOCKED', icon: AlertTriangle },
  { value: '0', label: 'RANSOMWARE EVENTS', icon: Lock },
];

const detailColumns = [
  {
    title: 'Security Framework',
    icon: ShieldCheck,
    items: [
      'Layered defenses cover network, endpoint, and cloud assets',
      'Continuous vulnerability scanning hardens your attack surface',
      'Managed detection and response neutralizes threats in real time',
    ],
  },
  {
    title: 'Compliance Readiness',
    icon: FileCheck,
    items: [
      'Readiness assessments map controls to HIPAA, PCI DSS, and SOC 2',
      'Policy documentation and evidence collection streamline audits',
      'Executive reporting tracks remediation progress and residual risk',
    ],
  },
];
---

<Layout
  title={`${service.data.title} & Compliance Services | BDKinc`}
  description="Managed cybersecurity, compliance readiness, and incident response for regulated organizations across Maryland, Delaware, and the Mid-Atlantic."
  ogDescription="BDKinc delivers 24/7 managed cybersecurity with ransomware protection, compliance readiness, and rapid incident response tailored to Mid-Atlantic businesses."
>
  <script type="application/ld+json">
    {JSON.stringify(_serviceSchema)}
  </script>
  <Navigation
    client:load
    services={servicesData}
    blogPosts={recentPosts}
    currentPath={Astro.url.pathname}
  />
  <main id="main-content">
    <!-- Hero Section -->
    <section class="relative overflow-hidden px-4 pt-24 pb-12 sm:px-6 lg:px-8">
  <div class="gradient-mesh absolute inset-0 opacity-30"></div>
  <div class="circuit-overlay absolute inset-0 opacity-40"></div>
  <div class="relative z-10 mx-auto max-w-7xl text-center">
    <div
      class="from-primary/10 to-secondary/10 mb-6 inline-flex items-center justify-center rounded-2xl bg-linear-to-br p-4 delay-100 duration-500"
      transition:name={`service-icon-${service.id}`}
    >
      <IconComponent className="text-primary h-12 w-12" aria-hidden="true" />
    </div>
    <h1
      class="mb-6 text-5xl font-bold md:text-6xl"
      transition:name={`service-title-${service.id}`}
      transition:animate="initial"
    >
      <span class="text-foreground">{titleFirst ? `${titleFirst} ` : ''}</span>
      <span
        class="from-primary to-secondary bg-linear-to-br bg-clip-text text-transparent"
        >{lastTitleWord}</span
      >
    </h1>
    <p
      class="text-muted-foreground mx-auto max-w-3xl text-xl"
      transition:name={`service-description-${service.id}`}
      transition:animate="initial"
    >
      {service.data.description}
    </p>
  </div>
  <div
    class="from-brand-primary to-brand-secondary absolute right-0 bottom-0 left-0 h-2 bg-linear-to-br"
  >
  </div>
</section>

<!-- Content Section -->
<section class="px-4 py-24 sm:px-6 lg:px-8">
  <div
    class="animate-in fade-in slide-in-from-bottom-4 fill-mode-both space-y-12 delay-600 duration-700"
  >
    <div class="mx-auto max-w-7xl">
      <div class="service-content-wrapper">
        <div class="not-prose mx-auto max-w-4xl">
          <h2 class="text-foreground mb-6 text-center text-3xl font-bold">
            Protect Your Business from Cyber Threats
          </h2>
          <div
            class="text-muted-foreground mb-10 text-center text-lg leading-relaxed"
          >
            Protect your business with comprehensive cybersecurity solutions,
            disaster recovery planning, and business continuity services. In
            today's threat landscape, cybersecurity isn't optional—it's
            essential for protecting your data, operations, and reputation.
          </div>
        </div>

        <h3 class="text-foreground mb-6 text-center text-2xl font-bold">
          Core Security Services
        </h3>

        <ServiceCardGrid>
          <ServiceCard>
            <div class="mb-6">
              <Lock className="text-primary h-16 w-16" aria-hidden="true" />
            </div>
            <h4 class="text-foreground mb-4 text-2xl font-bold">
              Ransomware Protection
            </h4>
            <div class="text-foreground leading-relaxed">
              Multi-layered security approach with advanced threat detection,
              regular backups, and incident response planning to protect against
              ransomware attacks.
            </div>
          </ServiceCard>

          <ServiceCard>
            <div class="mb-6">
              <RefreshCw className="text-primary h-16 w-16" aria-hidden="true" />
            </div>
            <h4 class="text-foreground mb-4 text-2xl font-bold">
              Disaster Recovery
            </h4>
            <div class="text-foreground leading-relaxed">
              Comprehensive recovery plans ensure you can restore critical
              operations quickly. We design and test procedures so you're
              prepared for any emergency.
            </div>
          </ServiceCard>

          <ServiceCard>
            <div class="mb-6">
              <CheckCircle2 className="text-primary h-16 w-16" aria-hidden="true" />
            </div>
            <h4 class="text-foreground mb-4 text-2xl font-bold">
              Business Continuity
            </h4>
            <div class="text-foreground leading-relaxed">
              Keep your business running no matter what happens. Our planning
              identifies critical functions and creates strategies to maintain
              operations during disruptions.
            </div>
          </ServiceCard>
        </ServiceCardGrid>

        <h3 class="text-foreground mt-12 mb-6 text-center text-2xl font-bold">
          Comprehensive Security Management
        </h3>

        <div class="not-prose mb-20">
          <p class="text-muted-foreground mb-10 text-center text-xl">
            Protect every layer of your infrastructure with our managed security
            services
          </p>

          <div class="grid gap-6 md:grid-cols-2">
            <div
              class="bg-background/50 border-border hover:border-primary flex items-start gap-4 rounded-lg border p-4 transition-colors"
            >
              <div class="bg-primary mt-2 h-2 w-2 shrink-0 rounded-full"></div>
              <div>
                <h5 class="text-foreground mb-1 text-lg font-bold">
                  Patches & Updates Management
                </h5>
                <div class="text-muted-foreground text-sm">
                  Unpatched systems are the #1 vulnerability exploited by
                  attackers. We manage security updates across your
                  infrastructure without disrupting operations.
                </div>
              </div>
            </div>

            <div
              class="bg-background/50 border-border hover:border-primary flex items-start gap-4 rounded-lg border p-4 transition-colors"
            >
              <div class="bg-primary mt-2 h-2 w-2 shrink-0 rounded-full"></div>
              <div>
                <h5 class="text-foreground mb-1 text-lg font-bold">
                  Security Monitoring
                </h5>
                <div class="text-muted-foreground text-sm">
                  24/7 monitoring detects threats before they become breaches.
                  We watch for suspicious activity and respond immediately.
                </div>
              </div>
            </div>

            <div
              class="bg-background/50 border-border hover:border-primary flex items-start gap-4 rounded-lg border p-4 transition-colors"
            >
              <div class="bg-primary mt-2 h-2 w-2 shrink-0 rounded-full"></div>
              <div>
                <h5 class="text-foreground mb-1 text-lg font-bold">
                  Backup Solutions
                </h5>
                <div class="text-muted-foreground text-sm">
                  Regular, tested backups are your last line of defense.
                  Automated backup systems with secure offsite storage ensure
                  data recovery.
                </div>
              </div>
            </div>

            <div
              class="bg-background/50 border-border hover:border-primary flex items-start gap-4 rounded-lg border p-4 transition-colors"
            >
              <div class="bg-primary mt-2 h-2 w-2 shrink-0 rounded-full"></div>
              <div>
                <h5 class="text-foreground mb-1 text-lg font-bold">
                  Security Assessments
                </h5>
                <div class="text-muted-foreground text-sm">
                  Understand your vulnerabilities before attackers do. Regular
                  assessments identify weaknesses and recommend improvements.
                </div>
              </div>
            </div>
          </div>
        </div>

        <h3 class="text-foreground mb-6 text-center text-2xl font-bold">
          Our Security Framework
        </h3>

        <div class="not-prose mb-20">
          <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-4">
            <div class="bg-background/50 border-border rounded-xl border p-6">
              <div class="mb-4">
                <ShieldCheck className="text-primary h-10 w-10" aria-hidden="true" />
              </div>
              <h4 class="text-foreground mb-3 text-xl font-bold">Prevent</h4>
              <ul class="text-muted-foreground space-y-2 text-sm">
                <li class="flex items-start gap-2">
                  <span class="text-primary mt-1">•</span>
                  <span>Firewall management</span>
                </li>
                <li class="flex items-start gap-2">
