---
import { getEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation';
import { getNavigationData } from '@/lib/navigation-data';
import { iconMap } from '@/lib/icons';
import { ServiceCard, ServiceCardGrid } from '@/components/ServiceCard';
import ImpactMetricsSection from '@/components/ImpactMetricsSection.astro';
import CTASection from '@/components/CTASection';
import { Card } from '@/components/ui/card';
import {
  Server,
  Cloud,
  ShieldCheck,
  TrendingUp,
  Users,
  Award,
  Wrench,
  RefreshCw,
  CheckCircle2,
  Mail,
} from 'lucide-react';
import { Logo } from '@/components/Logo';
import Footer from '@/components/Footer.astro';

const service = await getEntry('services', 'ibm-power');
if (!service) {
  return new Response(null, { status: 404 });
}
const { servicesData, recentPosts } = await getNavigationData();
const IconComponent = iconMap[service.data.icon];
const title = service.data.title;
const titleWords = title.split(' ');
const lastTitleWord = titleWords.pop();
const titleFirst = titleWords.join(' ');

const metrics = [
  { value: '500+', label: 'LPARS MANAGED', icon: Server },
  { value: '99.99%', label: 'AVAILABILITY TARGET', icon: ShieldCheck },
  { value: '24/7', label: 'OPERATIONS COVERAGE', icon: RefreshCw },
  { value: '30+', label: 'POWER ENGINEERS', icon: Users },
];

const detailColumns = [
  {
    title: 'Power Platform Services',
    icon: Wrench,
    items: [
      'Lifecycle support covering sizing, installation, and firmware strategy',
      'PowerVM design delivers HA, performance, and efficient resource sharing',
      'Storage and network architectures tuned for IBM i, AIX, and Linux workloads',
    ],
  },
  {
    title: 'Operations & Compliance',
    icon: ShieldCheck,
    items: [
      '24/7 monitoring, patching, and backup validation across every partition',
      'Security hardening satisfies SOX, PCI, HIPAA, and industry mandates',
      'Runbooks and reporting keep audits, DR tests, and SLAs on schedule',
    ],
  },
];
---

<Layout
  title={`${service.data.title} - BDKinc`}
  description={service.data.description}
>
  <Navigation
    client:load
    services={servicesData}
    blogPosts={recentPosts}
    currentPath={Astro.url.pathname}
  />
  <main id="main-content">
    <!-- Hero Section -->
    <section class="relative overflow-hidden px-4 pt-24 pb-12 sm:px-6 lg:px-8">
      <div class="gradient-mesh absolute inset-0 opacity-30"></div>
      <div class="circuit-overlay absolute inset-0 opacity-40"></div>
      <div class="relative z-10 mx-auto max-w-7xl">
        <div class="text-center">
          <div
            class="from-primary/10 to-secondary/10 mb-6 inline-flex items-center justify-center rounded-2xl bg-linear-to-br p-4"
            transition:name={`service-icon-${service.id}`}
            transition:animate="initial"
          >
            <IconComponent
              className="text-primary h-12 w-12"
              aria-hidden="true"
            />
          </div>
          <h1
            class="mb-6 text-5xl font-bold md:text-6xl"
            transition:name={`service-title-${service.id}`}
            transition:animate="initial"
          >
            <span class="text-foreground"
              >{titleFirst ? `${titleFirst} ` : ''}</span
            >
            <span
              class="from-primary to-secondary bg-linear-to-br bg-clip-text text-transparent"
              >{lastTitleWord}</span
            >
          </h1>
          <p
            transition:name={`service-description-${service.id}`}
            transition:animate="initial"
            class="text-muted-foreground mx-auto mb-12 max-w-3xl text-xl"
          >
            {service.data.description}
          </p>
        </div>

        {/* Hero Image Placeholder */}
        <div
          class="fill-mode-both animate-in fade-in zoom-in delay-300 duration-700"
        >
          <div
            class="glass border-primary/20 mx-auto max-w-5xl overflow-hidden rounded-2xl border shadow-lg"
          >
            <div
              class="from-primary/5 via-secondary/5 to-primary/5 flex aspect-video items-center justify-center bg-linear-to-br"
            >
              <div class="text-center">
                <div
                  class="text-muted-foreground/40 mb-2 text-sm font-medium tracking-wider uppercase"
                >
                  Service Hero Image
                </div>
                <div class="text-muted-foreground/60 text-lg">
                  IBM Power Systems Illustration
                </div>
                <div class="text-muted-foreground/40 mt-2 text-xs">
                  Recommended: 1400x800px
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div
        class="from-brand-primary to-brand-secondary absolute right-0 bottom-0 left-0 h-2 bg-linear-to-br"
      >
      </div>
    </section>

    <!-- Content Section -->
    <section class="px-4 py-24 sm:px-6 lg:px-8">
      <div
        class="animate-in fade-in slide-in-from-bottom-4 fill-mode-both space-y-12 delay-600 duration-700"
      >
        <div class="mx-auto max-w-7xl">
          <div class="service-content-wrapper">
            <div class="not-prose mx-auto max-w-4xl">
              <h2 class="text-foreground mb-6 text-center text-3xl font-bold">
                IBM Power Systems Hardware Support
              </h2>
              <div
                class="text-muted-foreground mb-10 text-center text-lg leading-relaxed"
              >
                BDKinc delivers end-to-end support for IBM Power hardware. As an <strong
                  class="text-primary">IBM Partner Plus Silver Partner</strong
                >, we manage, optimize, and protect mission-critical IBM Power
                systems running IBM i (IBMi), AIX, VIOS, and enterprise Linux
                (Red Hat, Ubuntu)—on-premises or in hybrid cloud.
              </div>
            </div>

            <h3 class="text-foreground mb-6 text-center text-2xl font-bold">
              What We Manage on IBM Power
            </h3>

            <ServiceCardGrid className="lg:grid-cols-3">
              <ServiceCard>
                <div class="mb-6">
                  <Wrench
                    className="text-primary h-16 w-16"
                    aria-hidden="true"
                  />
                </div>
                <h4 class="text-foreground mb-4 text-2xl font-bold">
                  Hardware Lifecycle
                </h4>
                <div class="text-foreground leading-relaxed">
                  Installation, configuration, microcode planning, and
                  maintenance for Power Systems racks, frames, and peripherals.
                </div>
              </ServiceCard>

              <ServiceCard>
                <div class="mb-6">
                  <Server
                    className="text-primary h-16 w-16"
                    aria-hidden="true"
                  />
                </div>
                <h4 class="text-foreground mb-4 text-2xl font-bold">
                  PowerVM, LPARs & VIOS
                </h4>
                <div class="text-foreground leading-relaxed">
                  Partitioning, virtual I/O, networking, and storage
                  mapping—built for high availability and performance.
                </div>
              </ServiceCard>

              <ServiceCard>
                <div class="mb-6">
                  <RefreshCw
                    className="text-primary h-16 w-16"
                    aria-hidden="true"
                  />
                </div>
                <h4 class="text-foreground mb-4 text-2xl font-bold">
                  OS Administration
                </h4>
                <div class="text-foreground leading-relaxed">
                  PTFs and patching for IBM i (IBMi), AIX, Red Hat, and Ubuntu;
                  security hardening, user and access controls, backup and
                  recovery.
                </div>
              </ServiceCard>

              <ServiceCard>
                <div class="mb-6">
                  <TrendingUp
                    className="text-primary h-16 w-16"
                    aria-hidden="true"
                  />
                </div>
                <h4 class="text-foreground mb-4 text-2xl font-bold">
                  Performance & Capacity
                </h4>
                <div class="text-foreground leading-relaxed">
                  Monitoring, tuning, and capacity planning to reduce risk,
                  control cost, and meet SLAs for mixed-OS estates.
                </div>
              </ServiceCard>

              <ServiceCard>
                <div class="mb-6">
                  <ShieldCheck
                    className="text-primary h-16 w-16"
                    aria-hidden="true"
                  />
                </div>
                <h4 class="text-foreground mb-4 text-2xl font-bold">
                  Resilience & DR
                </h4>
                <div class="text-foreground leading-relaxed">
                  HA/DR architectures for IBM i, AIX, and Linux on Power; backup
                  strategy, testing, and incident response.
                </div>
              </ServiceCard>

              <ServiceCard>
                <div class="mb-6">
                  <Cloud
                    className="text-primary h-16 w-16"
                    aria-hidden="true"
                  />
                </div>
                <h4 class="text-foreground mb-4 text-2xl font-bold">
                  Hybrid & Cloud Integration
                </h4>
                <div class="text-foreground leading-relaxed">
                  Connect Power workloads with cloud services, shared storage,
                  and enterprise tooling without compromising security.
                </div>
              </ServiceCard>
            </ServiceCardGrid>

            <h3 class="text-foreground mb-6 text-center text-2xl font-bold">
              How We Support IBM Power
            </h3>

            <div class="not-prose mb-20 grid gap-8 md:grid-cols-2">
              {
                detailColumns.map((column) => (
                  <div class="glass border-border rounded-2xl border p-8">
                    <div class="mb-6 flex items-center gap-3">
                      <column.icon
                        className="text-primary h-8 w-8"
                        aria-hidden="true"
                      />
                      <h4 class="text-foreground text-2xl font-bold">
                        {column.title}
                      </h4>
                    </div>
                    <div class="text-muted-foreground space-y-3">
                      {column.items.map((item) => (
                        <div class="flex items-start gap-2">
                          <CheckCircle2
                            className="text-primary mt-1 h-5 w-5 shrink-0"
                            aria-hidden="true"
                          />
                          <span>{item}</span>
                        </div>
                      ))}
                    </div>
                  </div>
                ))
              }
            </div>

            <h3
              class="text-foreground mt-12 mb-6 text-center text-2xl font-bold"
            >
              Why IBM Power for the Enterprise?
            </h3>

            <div class="not-prose mb-20">
              <p class="text-muted-foreground mb-10 text-center text-xl">
                IBM Power delivers the reliability, security, and scalability
                enterprises require for core business systems across IBM i, AIX,
                and Linux.
              </p>

              {/* Feature Image Placeholder */}
              <div class="mb-10">
                <div
                  class="glass border-primary/20 mx-auto max-w-4xl overflow-hidden rounded-2xl border"
                >
                  <div
                    class="from-primary/5 via-secondary/5 to-primary/5 flex items-center justify-center bg-linear-to-br"
                    style="aspect-ratio: 21/9;"
                  >
                    <div class="text-center">
                      <div
                        class="text-muted-foreground/40 mb-2 text-sm font-medium tracking-wider uppercase"
                      >
                        Feature Image
                      </div>
                      <div class="text-muted-foreground/60 text-lg">
                        IBM Power Infrastructure
                      </div>
                      <div class="text-muted-foreground/40 mt-2 text-xs">
                        Recommended: 1200x500px (21:9)
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <div class="grid gap-6 md:grid-cols-2">
                <div
                  class="bg-background/50 border-border hover:border-primary flex items-start gap-4 rounded-lg border p-4 transition-colors"
                >
                  <div class="bg-primary mt-2 h-2 w-2 shrink-0 rounded-full">
                  </div>
                  <div>
                    <h5 class="text-foreground mb-1 text-lg font-bold">
                      Defense-Grade Security
                    </h5>
                    <div class="text-muted-foreground text-sm">
                      Power architecture and OS controls reduce attack surface
                      while enabling compliant operations across regulated
                      industries.
                    </div>
                  </div>
                </div>

                <div
                  class="bg-background/50 border-border hover:border-primary flex items-start gap-4 rounded-lg border p-4 transition-colors"
                >
                  <div class="bg-primary mt-2 h-2 w-2 shrink-0 rounded-full">
                  </div>
                  <div>
                    <h5 class="text-foreground mb-1 text-lg font-bold">
                      Rock-Solid Uptime
                    </h5>
                    <div class="text-muted-foreground text-sm">
                      Proven availability for mission-critical ERP, EDI, and
                      analytics workloads with built-in redundancy options.
                    </div>
                  </div>
                </div>

                <div
                  class="bg-background/50 border-border hover:border-primary flex items-start gap-4 rounded-lg border p-4 transition-colors"
                >
                  <div class="bg-primary mt-2 h-2 w-2 shrink-0 rounded-full">
                  </div>
                  <div>
                    <h5 class="text-foreground mb-1 text-lg font-bold">
                      Multi-OS Flexibility
                    </h5>
                    <div class="text-muted-foreground text-sm">
                      Run IBM i (IBMi), AIX, and enterprise Linux (Red Hat,
                      Ubuntu) side-by-side, optimized on a single platform.
                    </div>
                  </div>
                </div>

                <div
                  class="bg-background/50 border-border hover:border-primary flex items-start gap-4 rounded-lg border p-4 transition-colors"
                >
                  <div class="bg-primary mt-2 h-2 w-2 shrink-0 rounded-full">
                  </div>
                  <div>
                    <h5 class="text-foreground mb-1 text-lg font-bold">
                      Future-Ready
                    </h5>
                    <div class="text-muted-foreground text-sm">
                      Modern capabilities and backward compatibility keep core
                      systems stable while you innovate.
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <h3 class="text-foreground mb-6 text-center text-2xl font-bold">
              Why <span class="font-display font-extrabold">BDKinc</span> for IBM
              Power Support
            </h3>

            <div
              class="not-prose mb-20 grid gap-6 md:grid-cols-2 lg:grid-cols-3"
            >
              <Card
                size="default"
                interactive={false}
                className="flex flex-col items-center text-center"
              >
                <div class="mb-4">
                  <Users
                    className="text-primary h-10 w-10"
                    aria-hidden="true"
                  />
                </div>
                <h4 class="text-foreground mb-2 text-xl font-bold">
                  40+ Years on Power
                </h4>
                <div class="text-muted-foreground">
                  Decades of hands-on experience with IBM i (IBMi), AIX, VIOS,
                  and Linux on Power.
                </div>
              </Card>

              <Card
                size="default"
                interactive={false}
                className="flex flex-col items-center text-center"
              >
                <div class="mb-4">
                  <Award
                    className="text-primary h-10 w-10"
                    aria-hidden="true"
                  />
                </div>
                <h4 class="text-foreground mb-2 text-xl font-bold">
                  IBM Silver Partner
                </h4>
                <div class="text-muted-foreground">
                  Certified expertise backed by IBM resources and support
                  channels.
                </div>
              </Card>

              <Card
                size="default"
                interactive={false}
                className="flex flex-col items-center text-center"
              >
                <div class="mb-4">
                  <ShieldCheck
                    className="text-primary h-10 w-10"
                    aria-hidden="true"
                  />
                </div>
                <h4 class="text-foreground mb-2 text-xl font-bold">
                  Enterprise-Grade Security
                </h4>
                <div class="text-muted-foreground">
                  Hardening, identity, and compliance across IBM i, AIX, and
                  Linux on Power.
                </div>
              </Card>

              <Card
                size="default"
                interactive={false}
                className="flex flex-col items-center text-center"
              >
                <div class="mb-4">
                  <TrendingUp
                    className="text-primary h-10 w-10"
                    aria-hidden="true"
                  />
                </div>
                <h4 class="text-foreground mb-2 text-xl font-bold">
                  SLA-Driven Operations
                </h4>
                <div class="text-muted-foreground">
                  24×7 monitoring, incident response, and capacity planning
                  aligned to your SLAs.
                </div>
              </Card>

              <Card
                size="default"
                interactive={false}
                className="flex flex-col items-center text-center"
              >
                <div class="mb-4">
                  <Server
                    className="text-primary h-10 w-10"
                    aria-hidden="true"
                  />
                </div>
                <h4 class="text-foreground mb-2 text-xl font-bold">
                  Single Partner, Multi-OS
                </h4>
                <div class="text-muted-foreground">
                  One MSP for IBM i, AIX, VIOS, Red Hat, and Ubuntu—simplifying
                  operations and reducing cost.
                </div>
              </Card>

              <Card
                size="default"
                interactive={false}
                className="flex flex-col items-center text-center"
              >
                <div class="mb-4">
                  <RefreshCw
                    className="text-primary h-10 w-10"
                    aria-hidden="true"
                  />
                </div>
                <h4 class="text-foreground mb-2 text-xl font-bold">
                  Cost & Risk Optimization
                </h4>
                <div class="text-muted-foreground">
                  Right-sizing, firmware cadence, and DR testing to minimize
                  downtime and spend.
                </div>
              </Card>
            </div>

            <h3 class="text-foreground mb-6 text-center text-2xl font-bold">
              Our Approach
            </h3>

            <div class="not-prose mb-20 grid gap-8 md:grid-cols-2">
              {/* Left: Image Placeholder */}
              <div
                class="glass border-primary/20 overflow-hidden rounded-2xl border"
              >
                <div
                  class="from-primary/5 via-secondary/5 to-primary/5 flex h-full min-h-[300px] items-center justify-center bg-linear-to-br"
                >
                  <div class="text-center">
                    <div
                      class="text-muted-foreground/40 mb-2 text-sm font-medium tracking-wider uppercase"
                    >
                      Approach Image
                    </div>
                    <div class="text-muted-foreground/60 text-lg">
                      IBM Power Management
                    </div>
                    <div class="text-muted-foreground/40 mt-2 text-xs">
                      Recommended: 600x400px
                    </div>
                  </div>
                </div>
              </div>

              {/* Right: Text Card */}
              <Card
                size="default"
                interactive={false}
                className="flex items-center"
              >
                <div class="text-muted-foreground text-lg leading-relaxed">
                  Your IBM Power environment is the backbone of the business. We
                  combine disciplined operations with modernization where it
                  matters—delivering predictable uptime, controlled costs, and a
                  clear roadmap across IBM i (IBMi), AIX, VIOS, Red Hat, and
                  Ubuntu.
                </div>
              </Card>
            </div>
          </div>
        </div>

        <ImpactMetricsSection metrics={metrics} />

        <CTASection
          client:load
          title="Ready to Stabilize and Modernize Your IBM Power Estate?"
          description="Partner with a team that runs IBM i (IBMi), AIX, VIOS, Red Hat, and Ubuntu on Power every day. Backed by 40+ years of experience and IBM Silver Partner credentials, we keep critical systems online while guiding your next steps."
          primaryAction={{
            text: 'Talk to an IBM Power Specialist',
            href: '/contact?from=ibm-power',
          }}
        />
      </div>
    </section>
  </main>

  <Footer />
</Layout>
