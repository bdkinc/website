---
import { getCollection, getEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation';
import { getNavigationData } from '@/lib/navigation-data';
import { iconMap } from '@/lib/icons';
import { ServiceCard, ServiceCardGrid } from '@/components/ServiceCard';
import ImpactMetricsSection from '@/components/ImpactMetricsSection.astro';
import {
  Server,
  HeadphonesIcon,
  Activity,
  MapPin,
  TrendingUp,
  Clock,
  Users,
  Shield,
  Zap,
  CheckCircle2,
  Mail,
} from 'lucide-react';
import { Logo } from '@/components/Logo';

const service = await getEntry('services', 'managed-it');
if (!service) {
  return new Response(null, { status: 404 });
}
const { servicesData, recentPosts } = await getNavigationData();
const IconComponent = iconMap[service.data.icon];
const title = service.data.title;
const titleWords = title.split(' ');
const lastTitleWord = titleWords.pop();
const titleFirst = titleWords.join(' ');

const _serviceSchema = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  name: service.data.title,
  description:
    'Managed IT services covering the Mid-Atlantic region with 24/7 support, proactive monitoring, and strategic technology planning from BDKinc.',
  areaServed: ['Maryland', 'Delaware', 'Mid-Atlantic'],
  provider: {
    '@type': 'Organization',
    name: 'BDKinc',
    url: 'https://www.bdkinc.com',
  },
  serviceType: 'Managed IT Services',
  offers: {
    '@type': 'Offer',
    availability: 'https://schema.org/InStock',
  },
};

const relatedPosts = (await getCollection('blog', ({ data }) => !data.draft))
  .filter((post) => post.data.tags?.includes('managed-services'))
  .slice(0, 3);

const metrics = [
  { value: '10K+', label: 'TICKETS CLOSED', icon: HeadphonesIcon },
  { value: '98%', label: 'FIRST-CALL RESOLUTION', icon: CheckCircle2 },
  { value: '2', label: 'HOUR ONSITE SLA', icon: MapPin },
  { value: '24/7', label: 'SUPPORT COVERAGE', icon: Clock },
];

const detailColumns = [
  {
    title: 'Support Tiers',
    icon: HeadphonesIcon,
    items: [
      'Unlimited help desk covers remote and onsite incidents',
      'Dedicated account managers align roadmaps with leadership goals',
      'Lifecycle management tracks assets, warranties, and renewals',
    ],
  },
  {
    title: 'Technology Operations',
    icon: Server,
    items: [
      'Proactive monitoring prevents outages with automated remediation',
      'Quarterly reviews surface optimization and security priorities',
      'Documented runbooks keep every response consistent and auditable',
    ],
  },
];
---

<Layout
  title={`${service.data.title} for Maryland & Delaware SMBs | BDKinc`}
  description="Comprehensive managed IT services for small and midsize businesses across Maryland and Delaware, including 24/7 help desk support, proactive monitoring, on-site/remote assistance, and strategic IT planning."
  ogDescription="Managed IT services in Maryland & Delaware delivering 24/7 support, proactive monitoring, cybersecurity, and strategic technology planning for growth-focused organizations."
>
  <script type="application/ld+json">
    {JSON.stringify(_serviceSchema)}
  </script>
  <Navigation
    client:load
    services={servicesData}
    blogPosts={recentPosts}
    currentPath={Astro.url.pathname}
  />
  <main id="main-content">
    <!-- Hero Section -->
    <section class="relative overflow-hidden px-4 pt-24 pb-12 sm:px-6 lg:px-8">
      <div class="gradient-mesh absolute inset-0 opacity-30"></div>
      <div class="circuit-overlay absolute inset-0 opacity-40"></div>
      <div class="relative z-10 mx-auto max-w-7xl text-center">
        <div
          class="from-primary/10 to-secondary/10 mb-6 inline-flex items-center justify-center rounded-2xl bg-linear-to-br p-4 delay-100 duration-500"
          transition:name={`service-icon-${service.id}`}
        >
          <IconComponent className="text-primary h-12 w-12" aria-hidden="true" />
        </div>
        <h1
          class="mb-6 text-5xl font-bold md:text-6xl"
          transition:name={`service-title-${service.id}`}
          transition:animate="initial"
        >
          <span class="text-foreground"
            >{titleFirst ? `${titleFirst} ` : ''}</span
          >
          <span
            class="from-primary to-secondary bg-linear-to-br bg-clip-text text-transparent"
            >{lastTitleWord}</span
          >
        </h1>
        <p
          class="text-muted-foreground mx-auto max-w-3xl text-xl"
          transition:name={`service-description-${service.id}`}
          transition:animate="initial"
        >
          {service.data.description}
        </p>
      </div>
      <div
        class="from-brand-primary to-brand-secondary absolute right-0 bottom-0 left-0 h-2 bg-linear-to-br"
      >
      </div>
    </section>

    <!-- Content Section -->
    <section class="px-4 py-24 sm:px-6 lg:px-8">
      <div
        class="animate-in fade-in slide-in-from-bottom-4 fill-mode-both space-y-12 delay-600 duration-700"
      >
        <div class="mx-auto max-w-7xl">
          <div class="service-content-wrapper">
            <div class="not-prose mx-auto max-w-4xl">
              <h2 class="text-foreground mb-6 text-center text-3xl font-bold">
                Comprehensive IT Management for Your Business
              </h2>
              <div
                class="text-muted-foreground mb-10 text-center text-lg leading-relaxed"
              >
                Our managed IT services provide comprehensive support for all
                your technology needs. With unlimited help desk support and both
                on-site and remote assistance, we ensure your systems run
                smoothly 24/7. Let our experienced technicians handle your IT
                infrastructure while you focus on growing your business.
              </div>
            </div>

            <h3 class="text-foreground mb-6 text-center text-2xl font-bold">
              Core Services
            </h3>

            <ServiceCardGrid>
              <ServiceCard>
                <div class="mb-6">
                <HeadphonesIcon className="text-primary h-16 w-16" aria-hidden="true" />
                </div>
                <h4 class="text-foreground mb-4 text-2xl font-bold">
                  Unlimited Help Desk
                </h4>
                <div class="text-foreground leading-relaxed">
                  Get immediate assistance whenever you need it. Our dedicated
                  support team is ready to resolve your IT issues quickly and
                  efficiently, minimizing downtime.
                </div>
              </ServiceCard>

              <ServiceCard>
                <div class="mb-6">
                <Activity className="text-primary h-16 w-16" aria-hidden="true" />
                </div>
                <h4 class="text-foreground mb-4 text-2xl font-bold">
                  Proactive Monitoring
                </h4>
                <div class="text-foreground leading-relaxed">
                  We don't wait for problems to occur. Our advanced monitoring
                  tools track your systems 24/7, identifying and resolving
                  potential issues before they impact your operations.
                </div>
              </ServiceCard>

              <ServiceCard>
                <div class="mb-6">
                <MapPin className="text-primary h-16 w-16" aria-hidden="true" />
                </div>
                <h4 class="text-foreground mb-4 text-2xl font-bold">
                  Flexible Support
                </h4>
                <div class="text-foreground leading-relaxed">
                  Whether you need hands-on assistance or quick remote
                  troubleshooting, our technicians are equipped to help with
                  flexible support options that fit your business needs.
                </div>
              </ServiceCard>
            </ServiceCardGrid>

            <h3
              class="text-foreground mt-12 mb-6 text-center text-2xl font-bold"
            >
              Why Choose Managed IT Services?
            </h3>

            <div class="not-prose mb-20">
              <p class="text-muted-foreground mb-10 text-center text-xl">
                Transform your technology from a cost center into a strategic
                advantage
              </p>

              <div class="grid gap-6 md:grid-cols-2">
                <div
                  class="bg-background/50 border-border hover:border-primary flex items-start gap-4 rounded-lg border p-4 transition-colors"
                >
                  <div class="bg-primary mt-2 h-2 w-2 shrink-0 rounded-full">
                  </div>
                  <div>
                    <h5 class="text-foreground mb-1 text-lg font-bold">
                      Reduce IT Costs
                    </h5>
                    <div class="text-muted-foreground text-sm">
                      Outsource your IT infrastructure and eliminate the expense
                      of maintaining an in-house IT department
                    </div>
                  </div>
                </div>

                <div
                  class="bg-background/50 border-border hover:border-primary flex items-start gap-4 rounded-lg border p-4 transition-colors"
                >
                  <div class="bg-primary mt-2 h-2 w-2 shrink-0 rounded-full">
                  </div>
                  <div>
                    <h5 class="text-foreground mb-1 text-lg font-bold">
                      Improve Efficiency
                    </h5>
                    <div class="text-muted-foreground text-sm">
                      Let our experts handle technology so you can focus on core
                      business operations
                    </div>
                  </div>
                </div>

                <div
                  class="bg-background/50 border-border hover:border-primary flex items-start gap-4 rounded-lg border p-4 transition-colors"
                >
                  <div class="bg-primary mt-2 h-2 w-2 shrink-0 rounded-full">
                  </div>
                  <div>
                    <h5 class="text-foreground mb-1 text-lg font-bold">
                      Minimize Downtime
                    </h5>
                    <div class="text-muted-foreground text-sm">
                      Proactive monitoring and rapid response keep your systems
                      running smoothly
                    </div>
                  </div>
                </div>

                <div
                  class="bg-background/50 border-border hover:border-primary flex items-start gap-4 rounded-lg border p-4 transition-colors"
                >
                  <div class="bg-primary mt-2 h-2 w-2 shrink-0 rounded-full">
                  </div>
                  <div>
                    <h5 class="text-foreground mb-1 text-lg font-bold">
                      Scalable Solutions
                    </h5>
                    <div class="text-muted-foreground text-sm">
                      Our services grow with your business, adapting to your
                      changing needs
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <h3 class="text-foreground mb-6 text-center text-2xl font-bold">
              Key Benefits
            </h3>

            <div class="not-prose mb-20 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
                <div class="border border-border/60 bg-background/90 rounded-2xl flex flex-col items-center p-6 text-center">
                  <div class="mb-4">
                    <Clock className="text-primary h-10 w-10" aria-hidden="true" />
                  </div>
                  <h4 class="text-foreground mb-2 text-xl font-bold">
                    24/7 Availability
                  </h4>
                  <div class="text-muted-foreground">
                    Round-the-clock monitoring and support ensures your business
                    never stops
                  </div>
                </div>

                <div class="border border-border/60 bg-background/90 rounded-2xl flex flex-col items-center p-6 text-center">
                  <div class="mb-4">
                    <Users className="text-primary h-10 w-10" aria-hidden="true" />
                  </div>
                  <h4 class="text-foreground mb-2 text-xl font-bold">
                    Expert Support
                  </h4>
                  <div class="text-muted-foreground">
                    Access to experienced technicians with diverse technical
                    expertise
                  </div>
                </div>

                <div class="border border-border/60 bg-background/90 rounded-2xl flex flex-col items-center p-6 text-center">
                  <div class="mb-4">
                    <Shield className="text-primary h-10 w-10" aria-hidden="true" />
                  </div>
                  <h4 class="text-foreground mb-2 text-xl font-bold">
                    Security First
                  </h4>
                  <div class="text-muted-foreground">
                    Proactive security measures protect your data and systems
                  </div>
                </div>

                <div class="border border-border/60 bg-background/90 rounded-2xl flex flex-col items-center p-6 text-center">
                  <div class="mb-4">
                    <TrendingUp className="text-primary h-10 w-10" aria-hidden="true" />
                  </div>
                  <h4 class="text-foreground mb-2 text-xl font-bold">
                    Business Growth
                  </h4>
                  <div class="text-muted-foreground">
                    Technology that scales with your business objectives
                  </div>
                </div>

                <div class="border border-border/60 bg-background/90 rounded-2xl flex flex-col items-center p-6 text-center">
                  <div class="mb-4">
                    <Zap className="text-primary h-10 w-10" aria-hidden="true" />
                  </div>
                  <h4 class="text-foreground mb-2 text-xl font-bold">
                    Rapid Response
                  </h4>
                  <div class="text-muted-foreground">
                    Quick issue resolution minimizes disruption to your operations
                  </div>
                </div>

                <div class="border border-border/60 bg-background/90 rounded-2xl flex flex-col items-center p-6 text-center">
                  <div class="mb-4">
                    <Server className="text-primary h-10 w-10" aria-hidden="true" />
                  </div>
                  <h4 class="text-foreground mb-2 text-xl font-bold">
                    Infrastructure Management
                  </h4>
                  <div class="text-muted-foreground">
                    Complete oversight of your IT infrastructure and assets
                  </div>
                </div>
              </div>

            <h3 class="text-foreground mb-6 text-center text-2xl font-bold">
              Our Approach
            </h3>

            <div
              class="border-border from-primary/10 to-secondary/10 not-prose mb-20 rounded-2xl border bg-linear-to-br p-10"
            >
              <div
                class="text-muted-foreground mx-auto max-w-4xl text-center text-lg leading-relaxed"
              >
                We take a comprehensive approach to IT management, covering
                everything from day-to-day support to strategic planning. Our
                team becomes an extension of your business, understanding your
                unique challenges and delivering customized solutions that drive
                results. Whether you're a small business looking for reliable IT
                support or a growing company needing scalable infrastructure
                management, we have the expertise and resources to keep your
                technology running at peak performance.
              </div>
            </div>

            <h3 class="text-foreground mb-6 text-center text-2xl font-bold">
              Why Choose BDK for Managed IT?
            </h3>

            <div class="text-center">
              <div
                class="text-muted-foreground mx-auto mb-6 max-w-4xl text-lg leading-relaxed"
              >
                With decades of experience in IT management and support, we
                understand what it takes to keep businesses running smoothly.
                Our proactive approach means we're solving problems before they
                affect your operations. We combine technical expertise with
                excellent customer service to deliver IT support that truly
                makes a difference.
              </div>
              <div class="text-primary text-xl font-semibold">
                Focus on your business. Let us handle your technology.
              </div>
            </div>

            <h3 class="text-foreground mb-12 text-center text-2xl font-bold">
              Service Details
            </h3>

            <div class="not-prose mb-20 grid gap-8 md:grid-cols-2">
              {detailColumns.map((column) => (
                <div class="glass border-border rounded-2xl border p-8">
                  <div class="mb-6 flex items-center gap-3">
                    <column.icon className="text-primary h-8 w-8" aria-hidden="true" />
                    <h4 class="text-foreground text-2xl font-bold">
                      {column.title}
                    </h4>
                  </div>
                  <div class="text-muted-foreground space-y-3">
                    {column.items.map((item) => (
                      <div class="flex items-start gap-2">
                        <CheckCircle2
                          className="text-primary mt-1 h-5 w-5 shrink-0"
                          aria-hidden="true"
                        />
                        <span>{item}</span>
                      </div>
                    ))}
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>

        <!-- Related Resources -->
        {relatedPosts.length > 0 && (
          <section class="mx-auto max-w-5xl">
            <h2 class="text-foreground mb-6 text-center text-3xl font-bold">
              Related Resources
            </h2>
            <div class="grid gap-6 md:grid-cols-3">
              {relatedPosts.map((post) => (
                <a
                  href={`/blog/${post.slug}`}
                  class="border-border hover:border-primary flex flex-col rounded-xl border p-6 transition-colors"
                >
                  <h3 class="text-foreground mb-2 text-lg font-semibold">
                    {post.data.title}
                  </h3>
                  <p class="text-muted-foreground text-sm">
                    {post.data.description}
                  </p>
                  <span class="text-primary mt-4 text-sm font-medium">
                    Read Article â†’
                  </span>
                </a>
              ))}
            </div>
          </section>
        )}

        <ImpactMetricsSection metrics={metrics} />

        <!-- CTA -->
        <div class="mx-auto max-w-4xl">
          <div
            class="glass rounded-2xl p-12 text-center delay-800 duration-500"
          >
            <h2 class="text-foreground mb-4 text-3xl font-bold md:text-4xl">
              Ready to Get Started?
            </h2>
            <p class="text-muted-foreground mb-8 text-xl">
              Let's discuss how {service.data.title.toLowerCase()} can transform
              your business.
            </p>
            <a
              href="/contact"
              class="bg-primary text-primary-foreground hover:bg-primary/90 inline-flex cursor-pointer items-center justify-center gap-2 rounded-md px-8 py-3 text-sm font-medium shadow-sm transition-colors"
            >
              Contact Us Today
              <Mail className="h-4 w-4" aria-hidden="true" />
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- Footer -->
  <footer class="relative px-4 py-12 sm:px-6 lg:px-8">
    <div class="relative z-10 mx-auto flex max-w-7xl flex-col items-center text-center">
      <div>
        <Logo />
      </div>
      <p class="text-muted-foreground mb-4">
        Your trusted technology partner since 1999
      </p>
      <p class="text-muted-foreground/70 text-sm">
        &copy; {new Date().getFullYear()} <span class="font-display font-extrabold">BDKinc</span>. All rights reserved.
      </p>
    </div>
  </footer>
</Layout>
