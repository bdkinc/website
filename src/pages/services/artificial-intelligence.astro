---
import { getEntry } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Navigation from "../../components/Navigation";
import { getNavigationData } from "@/lib/navigation-data";
import { iconMap } from "@/lib/icons";
import { ServiceCard, ServiceCardGrid } from '@/components/ServiceCard';
import {
  Sparkles,
  Shield,
  TrendingUp,
  Zap,
  Lock,
  Users,
  FileText,
  BarChart3,
  Target,
} from "lucide-react";

const service = await getEntry('services', 'artificial-intelligence');
if (!service) {
  return new Response(null, { status: 404 });
}
const { servicesData, recentPosts } = await getNavigationData();
const IconComponent = iconMap[service.data.icon];
---

<Layout title={`${service.data.title} - BDK Inc`} description={service.data.description}>
  <Navigation client:load services={servicesData} blogPosts={recentPosts} currentPath={Astro.url.pathname} />
  <main id="main-content">
    <!-- Hero Section -->
    <section class="relative overflow-hidden px-4 pt-24 pb-12 sm:px-6 lg:px-8">
      <div class="gradient-mesh absolute inset-0 opacity-30"></div>
      <div class="circuit-overlay absolute inset-0 opacity-40"></div>
      <div class="relative z-10 mx-auto max-w-7xl text-center">
        <div 
          class="inline-flex items-center justify-center p-4 rounded-2xl bg-linear-to-brr from-primary/10 to-secondary/10 mb-6"
          transition:name={`service-icon-${service.id}`}
        >
          <IconComponent className="w-12 h-12 text-primary" />
        </div>
        <h1 
          class="mb-6 text-5xl font-bold md:text-6xl"
          transition:name={`service-title-${service.id}`}
          transition:animate="initial"
        >
          <span class="bg-linear-to-br from-primary to-secondary bg-clip-text text-transparent">
            {service.data.title}
          </span>
        </h1>
        <p
          class="text-xl text-muted-foreground max-w-3xl mx-auto"
          transition:name={`service-description-${service.id}`}
          transition:animate="initial"
        >
          {service.data.description}
        </p>
      </div>
      <div class="from-brand-primary to-brand-secondary absolute right-0 bottom-0 left-0 h-2 bg-linear-to-br"></div>
    </section>

    <!-- Content Section -->
    <section class="px-4 py-24 sm:px-6 lg:px-8">
      <div class="space-y-12 animate-in fade-in slide-in-from-bottom-4 duration-700 delay-600 fill-mode-both">
            <div class="max-w-7xl mx-auto">
<div class="service-content-wrapper">

<div class="max-w-4xl mx-auto not-prose">
  <h2 class="text-3xl font-bold mb-6 text-foreground text-center">
    Transform Your Business with AI
  </h2>
  <div class="text-lg text-muted-foreground leading-relaxed mb-10 text-center">
    We design, build, and securely deploy production-ready AI solutions tailored to your business needs.
    From generative AI assistants to predictive analytics, our AI services help you automate processes,
    gain deeper insights, and deliver exceptional customer experiences.
  </div>
</div>

<h3 class="text-2xl font-bold mb-6 text-foreground text-center">Our AI Services</h3>

<ServiceCardGrid>
  <ServiceCard>
    <div class="mb-6">
      <Sparkles className="w-16 h-16 text-primary" />
    </div>
    <h4 class="text-2xl font-bold mb-4 text-primary">Generative AI</h4>
    <div class="text-muted-foreground leading-relaxed">
      Leverage large language models to automate content creation, enhance customer interactions,
      and streamline workflows with intelligent assistants.
    </div>
  </ServiceCard>

  <ServiceCard>
    <div class="mb-6">
      <TrendingUp className="w-16 h-16 text-primary" />
    </div>
    <h4 class="text-2xl font-bold mb-4 text-primary">Predictive Analytics</h4>
    <div class="text-muted-foreground leading-relaxed">
      Make data-driven decisions with AI models that forecast trends, identify patterns, and
      optimize operations for better business outcomes.
    </div>
  </ServiceCard>

  <ServiceCard>
    <div class="mb-6">
      <Zap className="w-16 h-16 text-primary" />
    </div>
    <h4 class="text-2xl font-bold mb-4 text-primary">AI Integration</h4>
    <div class="text-muted-foreground leading-relaxed">
      Seamlessly integrate AI capabilities into your existing systems and workflows for automated
      decision-making and real-time processing.
    </div>
  </ServiceCard>
</ServiceCardGrid>

<h3 class="text-2xl font-bold mb-6 text-foreground mt-12 text-center">Generative AI Solutions</h3>

<div class="mb-20 not-prose">
  <p class="text-xl text-muted-foreground text-center mb-10">
    Leverage the power of large language models to transform your operations
  </p>

  <div class="grid md:grid-cols-2 gap-6">
    <div class="flex items-start gap-4 p-4 rounded-lg bg-background/50 border border-border hover:border-primary transition-colors">
      <div class="w-2 h-2 rounded-full bg-primary mt-2 shrink-0"></div>
      <div>
        <h5 class="font-bold text-lg mb-1 text-foreground">Custom AI Assistants</h5>
        <div class="text-muted-foreground text-sm">Build intelligent chatbots and virtual assistants that understand your business context and deliver personalized experiences</div>
      </div>
    </div>

