---
import { getEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation';
import { getNavigationData } from '@/lib/navigation-data';
import { iconMap } from '@/lib/icons';
import { ServiceCard, ServiceCardGrid } from '@/components/ServiceCard';
import ImpactMetricsSection from '@/components/ImpactMetricsSection.astro';
import {
  Sparkles,
  Shield,
  TrendingUp,
  Zap,
  Lock,
  Users,
  FileText,
  BarChart3,
  Target,
  CheckCircle2,
  Mail,
} from 'lucide-react';
import { Logo } from '@/components/Logo';

const service = await getEntry('services', 'artificial-intelligence');
if (!service) {
  return new Response(null, { status: 404 });
}
const { servicesData, recentPosts } = await getNavigationData();
const IconComponent = iconMap[service.data.icon];
const title = service.data.title;
const titleWords = title.split(' ');
const lastTitleWord = titleWords.pop();
const titleFirst = titleWords.join(' ');

const metrics = [
  { value: '120+', label: 'AI WORKFLOWS LAUNCHED', icon: Sparkles },
  { value: '6 WEEKS', label: 'AVERAGE PILOT TIMELINE', icon: Zap },
  { value: '30%', label: 'MANUAL EFFORT REDUCTION', icon: TrendingUp },
  { value: '24/7', label: 'MODEL MONITORING', icon: Shield },
];

const detailColumns = [
  {
    title: 'AI Delivery Framework',
    icon: Target,
    items: [
      'Discovery sprints capture use cases, risks, and ROI expectations',
      'Model prototyping validates datasets and success metrics before scale',
      'Go-live playbooks cover deployment, retraining, and support',
    ],
  },
  {
    title: 'Governance & Security',
    icon: Lock,
    items: [
      'Guardrails enforce policy, privacy, and prompt security at every layer',
      'Human-in-the-loop workflows maintain accountability and transparency',
      'Monitoring detects drift, bias, and anomalies across production models',
    ],
  },
];
---

<Layout
  title={`${service.data.title} - BDKinc`}
  description={service.data.description}
>
  <Navigation
    client:load
    services={servicesData}
    blogPosts={recentPosts}
    currentPath={Astro.url.pathname}
  />
  <main id="main-content">
    <!-- Hero Section -->
    <section class="relative overflow-hidden px-4 pt-24 pb-12 sm:px-6 lg:px-8">
      <div class="gradient-mesh absolute inset-0 opacity-30"></div>
      <div class="circuit-overlay absolute inset-0 opacity-40"></div>
      <div class="relative z-10 mx-auto max-w-7xl text-center">
        <div
          class="from-primary/10 to-secondary/10 mb-6 inline-flex items-center justify-center rounded-2xl bg-linear-to-br p-4"
          transition:name={`service-icon-${service.id}`}
        >
          <IconComponent
            className="text-primary h-12 w-12"
            aria-hidden="true"
          />
        </div>
        <h1
          class="mb-6 text-5xl font-bold md:text-6xl"
          transition:name={`service-title-${service.id}`}
          transition:animate="initial"
        >
          <span class="text-foreground"
            >{titleFirst ? `${titleFirst} ` : ''}</span
          >
          <span
            class="from-primary to-secondary bg-linear-to-br bg-clip-text text-transparent"
            >{lastTitleWord}</span
          >
        </h1>
        <p
          class="text-muted-foreground mx-auto max-w-3xl text-xl"
          transition:name={`service-description-${service.id}`}
          transition:animate="initial"
        >
          {service.data.description}
        </p>
      </div>
      <div
        class="from-brand-primary to-brand-secondary absolute right-0 bottom-0 left-0 h-2 bg-linear-to-br"
      >
      </div>
    </section>

    <!-- Content Section -->
    <section class="px-4 py-24 sm:px-6 lg:px-8">
      <div
        class="animate-in fade-in slide-in-from-bottom-4 fill-mode-both space-y-12 delay-600 duration-700"
      >
        <div class="mx-auto max-w-7xl">
          <div class="service-content-wrapper">
            <div class="not-prose mx-auto max-w-4xl">
              <h2 class="text-foreground mb-6 text-center text-3xl font-bold">
                Transform Your Business with AI
              </h2>
              <div
                class="text-muted-foreground mb-10 text-center text-lg leading-relaxed"
              >
                We design, build, and securely deploy production-ready AI
                solutions tailored to your business needs. From generative AI
                assistants to predictive analytics, our AI services help you
                automate processes, gain deeper insights, and deliver
                exceptional customer experiences.
              </div>
            </div>

            <h3 class="text-foreground mb-6 text-center text-2xl font-bold">
              Our AI Services
            </h3>

            <ServiceCardGrid>
              <ServiceCard>
                <div class="mb-6">
                  <Sparkles
                    className="text-primary h-16 w-16"
                    aria-hidden="true"
                  />
                </div>
                <h4 class="text-foreground mb-4 text-2xl font-bold">
                  Generative AI
                </h4>
                <div class="text-foreground leading-relaxed">
                  Leverage large language models to automate content creation,
                  enhance customer interactions, and streamline workflows with
                  intelligent assistants.
                </div>
              </ServiceCard>

              <ServiceCard>
                <div class="mb-6">
                  <TrendingUp
                    className="text-primary h-16 w-16"
                    aria-hidden="true"
                  />
                </div>
                <h4 class="text-foreground mb-4 text-2xl font-bold">
                  Predictive Analytics
                </h4>
                <div class="text-foreground leading-relaxed">
                  Make data-driven decisions with AI models that forecast
                  trends, identify patterns, and optimize operations for better
                  business outcomes.
                </div>
              </ServiceCard>

              <ServiceCard>
                <div class="mb-6">
                  <Zap className="text-primary h-16 w-16" aria-hidden="true" />
                </div>
                <h4 class="text-foreground mb-4 text-2xl font-bold">
                  AI Integration
                </h4>
                <div class="text-foreground leading-relaxed">
                  Seamlessly integrate AI capabilities into your existing
                  systems and workflows for automated decision-making and
                  real-time processing.
                </div>
              </ServiceCard>
            </ServiceCardGrid>

            <h3
              class="text-foreground mt-12 mb-6 text-center text-2xl font-bold"
            >
              Generative AI Solutions
            </h3>

            <div class="not-prose mb-20">
              <p class="text-muted-foreground mb-10 text-center text-xl">
                Leverage the power of large language models to transform your
                operations
              </p>

              <div class="grid gap-6 md:grid-cols-2">
                <div
                  class="bg-background/50 border-border hover:border-primary flex items-start gap-4 rounded-lg border p-4 transition-colors"
                >
                  <div class="bg-primary mt-2 h-2 w-2 shrink-0 rounded-full">
                  </div>
                  <div>
                    <h5 class="text-foreground mb-1 text-lg font-bold">
                      Custom AI Assistants
                    </h5>
                    <div class="text-muted-foreground text-sm">
                      Build intelligent chatbots and virtual assistants that
                      understand your business context and deliver personalized
                      experiences
                    </div>
                  </div>
                </div>

                <div
                  class="bg-background/50 border-border hover:border-primary flex items-start gap-4 rounded-lg border p-4 transition-colors"
                >
                  <div class="bg-primary mt-2 h-2 w-2 shrink-0 rounded-full">
                  </div>
                  <div>
                    <h5 class="text-foreground mb-1 text-lg font-bold">
                      Document Processing
                    </h5>
                    <div class="text-muted-foreground text-sm">
                      Automate document analysis, summarization, and information
                      extraction to save time and improve accuracy
                    </div>
                  </div>
                </div>

                <div
                  class="bg-background/50 border-border hover:border-primary flex items-start gap-4 rounded-lg border p-4 transition-colors"
                >
                  <div class="bg-primary mt-2 h-2 w-2 shrink-0 rounded-full">
                  </div>
                  <div>
                    <h5 class="text-foreground mb-1 text-lg font-bold">
                      Content Generation
                    </h5>
                    <div class="text-muted-foreground text-sm">
                      Create marketing copy, technical documentation, and
                      personalized communications at scale
                    </div>
                  </div>
                </div>

                <div
                  class="bg-background/50 border-border hover:border-primary flex items-start gap-4 rounded-lg border p-4 transition-colors"
                >
                  <div class="bg-primary mt-2 h-2 w-2 shrink-0 rounded-full">
                  </div>
                  <div>
                    <h5 class="text-foreground mb-1 text-lg font-bold">
                      Code Assistance
                    </h5>
                    <div class="text-muted-foreground text-sm">
                      Accelerate development with AI-powered code generation and
                      review tools
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <h3 class="text-foreground mb-6 text-center text-2xl font-bold">
              Predictive Analytics & Machine Learning
            </h3>

            <div class="not-prose mb-20">
              <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-4">
                <div
                  class="bg-background/50 border-border flex flex-col items-center rounded-xl border p-6 text-center"
                >
                  <BarChart3
                    className="text-primary mb-4 h-12 w-12"
                    aria-hidden="true"
                  />
                  <h5 class="text-foreground mb-2 text-lg font-bold">
                    Demand Forecasting
                  </h5>
                  <div class="text-muted-foreground text-sm">
                    Predict customer demand to optimize inventory and resource
                    allocation
                  </div>
                </div>

                <div
                  class="bg-background/50 border-border flex flex-col items-center rounded-xl border p-6 text-center"
                >
                  <Users
                    className="text-primary mb-4 h-12 w-12"
                    aria-hidden="true"
                  />
                  <h5 class="text-foreground mb-2 text-lg font-bold">
                    Churn Prediction
                  </h5>
                  <div class="text-muted-foreground text-sm">
                    Identify at-risk customers before they leave
                  </div>
                </div>

                <div
                  class="bg-background/50 border-border flex flex-col items-center rounded-xl border p-6 text-center"
                >
                  <Target
                    className="text-primary mb-4 h-12 w-12"
                    aria-hidden="true"
                  />
                  <h5 class="text-foreground mb-2 text-lg font-bold">
                    Anomaly Detection
                  </h5>
                  <div class="text-muted-foreground text-sm">
                    Automatically detect unusual patterns in operations,
                    security, or quality
                  </div>
                </div>

                <div
                  class="bg-background/50 border-border flex flex-col items-center rounded-xl border p-6 text-center"
                >
                  <Sparkles
                    className="text-primary mb-4 h-12 w-12"
                    aria-hidden="true"
                  />
                  <h5 class="text-foreground mb-2 text-lg font-bold">
                    Recommendation Systems
                  </h5>
                  <div class="text-muted-foreground text-sm">
                    Personalize customer experiences with intelligent
                    recommendations
                  </div>
                </div>
              </div>
            </div>

            <h3 class="text-foreground mb-6 text-center text-2xl font-bold">
              How We Implement AI
            </h3>

            <div class="not-prose mb-20 grid gap-8 md:grid-cols-2">
              {
                detailColumns.map((column) => (
                  <div class="glass border-border rounded-2xl border p-8">
                    <div class="mb-6 flex items-center gap-3">
                      <column.icon
                        className="text-primary h-8 w-8"
                        aria-hidden="true"
                      />
                      <h4 class="text-foreground text-2xl font-bold">
                        {column.title}
                      </h4>
                    </div>
                    <div class="text-muted-foreground space-y-3">
                      {column.items.map((item) => (
                        <div class="flex items-start gap-2">
                          <CheckCircle2
                            className="text-primary mt-1 h-5 w-5 shrink-0"
                            aria-hidden="true"
                          />
                          <span>{item}</span>
                        </div>
                      ))}
                    </div>
                  </div>
                ))
              }
            </div>

            <h3 class="text-foreground mb-6 text-center text-2xl font-bold">
              Why Choose BDK for AI?
            </h3>

            <div
              class="not-prose mb-20 grid gap-6 md:grid-cols-2 lg:grid-cols-3"
            >
              <div
                class="bg-background/50 border-border flex flex-col items-center rounded-xl border p-6 text-center"
              >
                <div class="mb-4">
                  <Shield
                    className="text-primary h-10 w-10"
                    aria-hidden="true"
                  />
                </div>
                <h4 class="text-foreground mb-2 text-xl font-bold">
                  Security First
                </h4>
                <div class="text-muted-foreground">
                  Enterprise-grade security controls, data encryption, and
                  compliance with industry standards
                </div>
              </div>

              <div
                class="bg-background/50 border-border flex flex-col items-center rounded-xl border p-6 text-center"
              >
                <div class="mb-4">
                  <Zap className="text-primary h-10 w-10" aria-hidden="true" />
                </div>
                <h4 class="text-foreground mb-2 text-xl font-bold">
                  Production-Ready
                </h4>
                <div class="text-muted-foreground">
                  Built for reliability and scale with proper monitoring, error
                  handling, and performance optimization
                </div>
              </div>

              <div
                class="bg-background/50 border-border flex flex-col items-center rounded-xl border p-6 text-center"
              >
                <div class="mb-4">
                  <Target
                    className="text-primary h-10 w-10"
                    aria-hidden="true"
                  />
                </div>
                <h4 class="text-foreground mb-2 text-xl font-bold">
                  Business-Focused
                </h4>
                <div class="text-muted-foreground">
                  We start with your business objectives and design AI solutions
                  that deliver measurable ROI
                </div>
              </div>

              <div
                class="bg-background/50 border-border flex flex-col items-center rounded-xl border p-6 text-center"
              >
                <div class="mb-4">
                  <FileText
                    className="text-primary h-10 w-10"
                    aria-hidden="true"
                  />
                </div>
                <h4 class="text-foreground mb-2 text-xl font-bold">
                  Transparent & Explainable
                </h4>
                <div class="text-muted-foreground">
                  AI solutions that are interpretable and explainable for
                  informed decision-making
                </div>
              </div>

              <div
                class="bg-background/50 border-border flex flex-col items-center rounded-xl border p-6 text-center"
              >
                <div class="mb-4">
                  <Users
                    className="text-primary h-10 w-10"
                    aria-hidden="true"
                  />
                </div>
                <h4 class="text-foreground mb-2 text-xl font-bold">
                  Ongoing Support
                </h4>
                <div class="text-muted-foreground">
                  Continuous monitoring and refinement to ensure your AI systems
                  adapt as your business evolves
                </div>
              </div>

              <div
                class="bg-background/50 border-border flex flex-col items-center rounded-xl border p-6 text-center"
              >
                <div class="mb-4">
                  <Lock className="text-primary h-10 w-10" aria-hidden="true" />
                </div>
                <h4 class="text-foreground mb-2 text-xl font-bold">
                  Responsible AI
                </h4>
                <div class="text-muted-foreground">
                  Committed to ethical AI with privacy protection, bias
                  mitigation, and human oversight
                </div>
              </div>
            </div>

            <h3 class="text-foreground mb-6 text-center text-2xl font-bold">
              Our AI Development Process
            </h3>

            <div
              class="border-border from-primary/10 to-secondary/10 not-prose mb-20 rounded-2xl border bg-linear-to-br p-10"
            >
              <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
                <div class="text-center">
                  <div
                    class="bg-primary/20 text-primary mb-4 inline-flex h-12 w-12 items-center justify-center rounded-full text-xl font-bold"
                  >
                    1
                  </div>
                  <h5 class="text-foreground mb-2 text-lg font-bold">
                    Discovery & Assessment
                  </h5>
                  <div class="text-muted-foreground text-sm">
                    Understand your business challenges and identify high-impact
                    AI opportunities
                  </div>
                </div>
                <div class="text-center">
                  <div
                    class="bg-primary/20 text-primary mb-4 inline-flex h-12 w-12 items-center justify-center rounded-full text-xl font-bold"
                  >
                    2
                  </div>
                  <h5 class="text-foreground mb-2 text-lg font-bold">
                    Data Evaluation
                  </h5>
                  <div class="text-muted-foreground text-sm">
                    Assess data quality, availability, and compliance
                    requirements
                  </div>
                </div>
                <div class="text-center">
                  <div
                    class="bg-primary/20 text-primary mb-4 inline-flex h-12 w-12 items-center justify-center rounded-full text-xl font-bold"
                  >
                    3
                  </div>
                  <h5 class="text-foreground mb-2 text-lg font-bold">
                    Proof of Concept
                  </h5>
                  <div class="text-muted-foreground text-sm">
                    Rapidly prototype solutions to validate feasibility and
                    business value
                  </div>
                </div>
                <div class="text-center">
                  <div
                    class="bg-primary/20 text-primary mb-4 inline-flex h-12 w-12 items-center justify-center rounded-full text-xl font-bold"
                  >
                    4
                  </div>
                  <h5 class="text-foreground mb-2 text-lg font-bold">
                    Development & Training
                  </h5>
                  <div class="text-muted-foreground text-sm">
                    Build and train custom AI models with your data
                  </div>
                </div>
                <div class="text-center">
                  <div
                    class="bg-primary/20 text-primary mb-4 inline-flex h-12 w-12 items-center justify-center rounded-full text-xl font-bold"
                  >
                    5
                  </div>
                  <h5 class="text-foreground mb-2 text-lg font-bold">
                    Integration & Deployment
                  </h5>
                  <div class="text-muted-foreground text-sm">
                    Securely deploy AI into your production environment
                  </div>
                </div>
                <div class="text-center">
                  <div
                    class="bg-primary/20 text-primary mb-4 inline-flex h-12 w-12 items-center justify-center rounded-full text-xl font-bold"
                  >
                    6
                  </div>
                  <h5 class="text-foreground mb-2 text-lg font-bold">
                    Monitoring & Optimization
                  </h5>
                  <div class="text-muted-foreground text-sm">
                    Continuously monitor performance and refine models for
                    better results
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <ImpactMetricsSection metrics={metrics} />

        <div class="mx-auto max-w-4xl">
          <div class="glass rounded-2xl p-12 text-center">
            <h2 class="text-foreground mb-4 text-3xl font-bold md:text-4xl">
              Ready to Get Started?
            </h2>
            <p class="text-muted-foreground mb-8 text-xl">
              Let's discuss how {service.data.title.toLowerCase()} can transform
              your business.
            </p>
            <a
              href="/contact"
              class="bg-primary text-primary-foreground hover:bg-primary/90 inline-flex cursor-pointer items-center justify-center gap-2 rounded-md px-8 py-3 text-sm font-medium shadow-sm transition-colors"
            >
              Contact Us Today
              <Mail className="h-4 w-4" aria-hidden="true" />
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- Footer -->
  <footer class="relative px-4 py-12 sm:px-6 lg:px-8">
    <div
      class="relative z-10 mx-auto flex max-w-7xl flex-col items-center text-center"
    >
      <div>
        <Logo />
      </div>
      <p class="text-muted-foreground mb-4">
        Your trusted technology partner since 1999
      </p>
      <p class="text-muted-foreground/70 text-sm">
        &copy; {new Date().getFullYear()}
        <span class="font-display font-extrabold">BDKinc</span>. All rights
        reserved.
      </p>
    </div>
  </footer>
</Layout>
