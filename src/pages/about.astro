---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation";
import CTASection from "../components/CTASection";
import { getNavigationData } from "@/lib/navigation-data";
import { Logo } from "@/components/Logo";
import { Rocket, Eye, Target, Lightbulb, Shield, Users, Award, Clock, Box } from "lucide-react";

const { servicesData, recentPosts } = await getNavigationData();

// Company values data
const values = [
  {
    icon: "Target",
    title: "Client-Focused",
    description:
      "Your success is our success. We tailor solutions to meet your unique business needs.",
  },
  {
    icon: "Lightbulb",
    title: "Innovation",
    description:
      "We stay ahead of technology trends to bring you cutting-edge solutions.",
  },
  {
    icon: "Shield",
    title: "Reliability",
    description:
      "25+ years of proven track record delivering consistent, dependable IT services.",
  },
  {
    icon: "Users",
    title: "Partnership",
    description:
      "We're not just vendors—we're your long-term technology partners.",
  },
  {
    icon: "Award",
    title: "Excellence",
    description:
      "We maintain the highest standards in service delivery and customer satisfaction.",
  },
  {
    icon: "Clock",
    title: "24/7 Support",
    description:
      "Round-the-clock availability because your business never stops.",
  },
];

// Milestones data
const milestones = [
  {
    year: "1999",
    title: "Founded",
    description:
      "BDK Inc was established with a vision to simplify IT for businesses.",
  },
  {
    year: "2005",
    title: "Cloud Services",
    description: "Expanded into cloud hosting and virtualization services.",
  },
  {
    year: "2012",
    title: "Cybersecurity",
    description:
      "Launched comprehensive cybersecurity and compliance services.",
  },
  {
    year: "2020",
    title: "AI Integration",
    description:
      "Pioneered AI and machine learning solutions for business automation.",
  },
  {
    year: "2024",
    title: "500+ Clients",
    description: "Serving over 500 businesses with comprehensive IT solutions.",
  },
];
---

<Layout
  title="About Us | IT Excellence Since 1999 | BDK Inc"
  description="Learn about BDK Inc's 25+ year journey of delivering exceptional managed IT services, cloud hosting, and cybersecurity solutions to businesses."
>
  <Navigation client:load services={servicesData} blogPosts={recentPosts} />
  <main id="main-content" class="relative min-h-screen -mt-16 pt-16">
    {/* Gradient background */}
    <div class="absolute inset-0 gradient-mesh"></div>

    {/* Circuit board pattern overlay */}
    <div class="absolute inset-0 opacity-40 circuit-overlay"></div>

    {/* Content */}
    <div class="relative z-10">
      {/* Hero Section */}
      <section class="py-24 px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center pt-8 md:pt-12 lg:pt-16">
          <h1
            class="text-5xl md:text-6xl font-bold mb-6 fill-mode-both animate-in fade-in slide-in-from-bottom-8 duration-700"
          >
            <span class="text-foreground">IT Made Simple Since </span>
            <span
              class="bg-linear-to-br to-secondary from-primary text-transparent bg-clip-text"
              >1999</span
            >
          </h1>
          <p
            class="text-xl md:text-2xl text-muted-foreground leading-relaxed fill-mode-both animate-in fade-in slide-in-from-bottom-6 duration-700 delay-200"
          >
            For over 25 years, BDK Inc has been the trusted technology partner
            for businesses seeking reliable, innovative IT solutions. We
            transform complex technology challenges into simple, effective
            solutions that drive business growth.
          </p>
        </div>
      </section>

      {/* Mission & Vision Section */}
      <section class="py-24 px-4 sm:px-6 lg:px-8">
        <div class="max-w-7xl mx-auto">
          <div class="grid md:grid-cols-2 gap-12">
            {/* Mission */}
            <div
              class="glass rounded-2xl p-8 md:p-10 hover:scale-105 transition-transform flex flex-col items-center justify-center text-center h-full fill-mode-both animate-in fade-in slide-in-from-left-8 duration-700 delay-300"
            >
              <div class="mb-6">
                <div
                  class="inline-flex items-center justify-center p-4 rounded-lg bg-primary/10"
                >
                  <Rocket className="icon-lg text-primary" />
                </div>
              </div>
              <h2 class="text-3xl font-bold mb-4 text-foreground text-center">
                Our Mission
              </h2>
              <p
                class="text-lg text-muted-foreground leading-relaxed text-center max-w-lg mx-auto"
              >
                To empower businesses through innovative technology solutions
                that simplify IT infrastructure, enhance security, and drive
                operational efficiency. We're committed to being more than just
                a service provider—we're your strategic technology partner.
              </p>
            </div>

            {/* Vision */}
            <div
              class="glass rounded-2xl p-8 md:p-10 hover:scale-105 transition-transform flex flex-col items-center justify-center text-center h-full fill-mode-both animate-in fade-in slide-in-from-right-8 duration-700 delay-400"
            >
              <div class="mb-6">
                <div
                  class="inline-flex items-center justify-center p-4 rounded-lg bg-secondary/10"
                >
                  <Eye className="icon-lg text-secondary" />
                </div>
              </div>
              <h2 class="text-3xl font-bold mb-4 text-foreground text-center">
                Our Vision
              </h2>
              <p
                class="text-lg text-muted-foreground leading-relaxed text-center max-w-lg mx-auto"
              >
                To be the most trusted IT partner for businesses seeking to
                leverage technology for competitive advantage. We envision a
                future where businesses of all sizes can access enterprise-grade
                IT solutions with simplicity and confidence.
              </p>
            </div>
          </div>
        </div>
      </section>

      {/* Values Section */}
      <section class="py-24 px-4 sm:px-6 lg:px-8">
        <div class="max-w-7xl mx-auto">
          <div class="text-center mb-16">
            <h2
              class="text-4xl md:text-5xl font-bold mb-4 fill-mode-both animate-in fade-in slide-in-from-bottom-8 duration-600"
            >
              <span class="text-foreground">Our </span>
              <span class="text-primary">Values</span>
            </h2>
            <p
              class="text-xl text-muted-foreground max-w-2xl mx-auto fill-mode-both animate-in fade-in slide-in-from-bottom-4 duration-600 delay-100"
            >
              The principles that guide everything we do
            </p>
          </div>

          {/* Values Grid */}
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            {
              values.map((value, index) => {
                const iconMap = { Target, Lightbulb, Shield, Users, Award, Clock, Box };
                const IconComponent =
                  iconMap[value.icon as keyof typeof iconMap] || Box;
                return (
                  <div
                    class={`glass rounded-xl p-6 hover:scale-105 hover:shadow-[--shadow-glow-sm] transition-all duration-300 flex flex-col items-center justify-center text-center h-full fill-mode-both animate-in fade-in zoom-in duration-600 delay-${200 + index * 100}`}
                  >
                    <div class="mb-4">
                      <div class="inline-flex items-center justify-center p-3 rounded-lg bg-primary/10">
                        <IconComponent className="icon-md text-primary" />
                      </div>
                    </div>
                    <h3 class="text-xl font-bold text-foreground mb-3 text-center">
                      {value.title}
                    </h3>
                    <p class="text-muted-foreground text-center">
                      {value.description}
                    </p>
                  </div>
                );
              })
            }
          </div>
        </div>
      </section>

      {/* Journey/Timeline Section */}
      <section class="py-24 px-4 sm:px-6 lg:px-8">
        <div class="max-w-5xl mx-auto">
          <div class="text-center mb-16">
            <h2
              class="text-4xl md:text-5xl font-bold mb-4 fill-mode-both animate-in fade-in slide-in-from-bottom-8 duration-600"
            >
              <span class="text-foreground">Our </span>
              <span class="text-primary">Journey</span>
            </h2>
            <p
              class="text-xl text-muted-foreground max-w-2xl mx-auto fill-mode-both animate-in fade-in slide-in-from-bottom-4 duration-600 delay-100"
            >
              A legacy of innovation and excellence
            </p>
          </div>

          {/* Timeline */}
          <div class="relative">
            {/* Vertical line */}
            <div
              class="absolute left-8 md:left-1/2 top-0 bottom-0 w-0.5 bg-gradient-to-b from-primary via-secondary to-primary"
            >
            </div>

            <div class="space-y-12">
              {
                milestones.map((milestone, index) => {
                  const isEven = index % 2 === 0;
                  return (
                    <div
                      class={`relative ${isEven ? "md:text-right" : "md:text-left"}`}
                    >
                      <div
                        class={`md:grid md:grid-cols-2 md:gap-8 ${isEven ? "" : "md:flex-row-reverse"}`}
                      >
                        <div
                          class={
                            isEven ? "md:pr-12" : "md:col-start-2 md:pl-12"
                          }
                        >
                          <div
                            class={`glass rounded-xl p-6 ml-16 md:ml-0 hover:scale-105 transition-transform duration-300 fill-mode-both animate-in ${index % 2 === 0 ? "slide-in-from-left-8" : "slide-in-from-right-8"} fade-in duration-700 delay-${200 + index * 100}`}
                          >
                            <div class="text-3xl font-bold text-primary mb-2">
                              {milestone.year}
                            </div>
                            <h3 class="text-xl font-bold text-foreground mb-2">
                              {milestone.title}
                            </h3>
                            <p class="text-muted-foreground">
                              {milestone.description}
                            </p>
                          </div>
                        </div>
                      </div>
                      {/* Timeline dot */}
                      <div class="absolute left-8 md:left-1/2 top-6 w-4 h-4 -ml-2 rounded-full bg-primary ring-4 ring-background shadow-[--shadow-glow-sm]" />
                    </div>
                  );
                })
              }
            </div>
          </div>
        </div>
      </section>

      {/* Why Choose Us Section */}
      <section
        class="py-24 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-transparent via-primary/5 to-transparent"
      >
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-12">
            <h2
              class="text-4xl md:text-5xl font-bold mb-4 fill-mode-both animate-in fade-in slide-in-from-bottom-8 duration-600"
            >
              <span class="text-foreground">Why Choose </span>
              <span class="text-primary">BDK Inc</span>
              <span class="text-foreground">?</span>
            </h2>
          </div>

          <div
            class="glass rounded-2xl p-8 md:p-12 fill-mode-both animate-in fade-in zoom-in duration-700 delay-200"
          >
            <div class="space-y-6 text-lg text-muted-foreground">
              <p class="leading-relaxed">
                <strong class="text-foreground">Experience That Matters:</strong
                > With over 25 years in the industry, we've seen technology evolve
                and have helped hundreds of businesses navigate digital transformation.
                Our experience means we can anticipate challenges and provide proactive
                solutions.
              </p>
              <p class="leading-relaxed">
                <strong class="text-foreground">Comprehensive Solutions:</strong
                > From managed IT services and cloud hosting to cybersecurity and
                AI integration, we offer end-to-end technology solutions. You get
                the convenience of a single partner who understands your complete
                IT ecosystem.
              </p>
              <p class="leading-relaxed">
                <strong class="text-foreground">Personalized Approach:</strong> We
                don't believe in one-size-fits-all solutions. Every business is unique,
                and we take the time to understand your specific needs, challenges,
                and goals before recommending solutions.
              </p>
              <p class="leading-relaxed">
                <strong class="text-foreground">Proven Track Record:</strong> Our
                500+ satisfied clients across various industries speak to our ability
                to deliver results. We've built our reputation on reliability, innovation,
                and exceptional customer service.
              </p>
              <p class="leading-relaxed">
                <strong class="text-foreground">Future-Ready Technology:</strong
                > We don't just maintain your current infrastructure—we help you
                prepare for the future with AI, machine learning, and next-generation
                cloud solutions that give you a competitive edge.
              </p>
            </div>
          </div>
        </div>
      </section>

      {/* CTA Section */}
      <CTASection
        client:visible
        title="Ready to Partner with BDK Inc?"
        description="Let's discuss how our 25+ years of experience can help transform your IT infrastructure and drive business growth."
        buttonText="Start the Conversation"
        buttonHref="/contact"
      />
    </div>
  </main>

  {/* Footer */}
  <footer class="py-12 px-4 sm:px-6 lg:px-8 relative">
    <div class="absolute inset-0 gradient-mesh opacity-50"></div>
    <div
      class="max-w-7xl mx-auto text-center flex flex-col items-center relative z-10"
    >
      <div>
        <Logo />
      </div>
      <p class="text-muted-foreground mb-4">
        Your trusted technology partner since 1999
      </p>
      <p class="text-sm text-muted-foreground/70">
        &copy; {new Date().getFullYear()} BDK Inc. All rights reserved.
      </p>
    </div>
  </footer>
</Layout>
