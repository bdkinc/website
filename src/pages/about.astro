---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation';
import CTASection from '../components/CTASection';
import { Card } from '@/components/ui/card';
import { getNavigationData } from '@/lib/navigation-data';
import { Logo } from '@/components/Logo';
import {
  Rocket,
  Eye,
  Target,
  Lightbulb,
  Shield,
  Users,
  Award,
  Clock,
  Box,
  Briefcase,
  Package,
  Trophy,
  Zap,
} from 'lucide-react';

const { servicesData, recentPosts } = await getNavigationData();

// Company values data
const values = [
  {
    icon: 'Target',
    title: 'Client-Focused',
    description:
      'Your success is our success. We tailor solutions to meet your unique business needs.',
  },
  {
    icon: 'Lightbulb',
    title: 'Innovation',
    description:
      'We stay ahead of technology trends to bring you cutting-edge solutions.',
  },
  {
    icon: 'Shield',
    title: 'Reliability',
    description:
      '25+ years of proven track record delivering consistent, dependable IT services.',
  },
  {
    icon: 'Users',
    title: 'Partnership',
    description:
      "We're not just vendors—we're your long-term technology partners.",
  },
  {
    icon: 'Award',
    title: 'Excellence',
    description:
      'We maintain the highest standards in service delivery and customer satisfaction.',
  },
  {
    icon: 'Clock',
    title: '24/7 Support',
    description:
      'Round-the-clock availability because your business never stops.',
  },
];

// Milestones data
const milestones = [
  {
    year: '1999',
    title: 'Founded',
    description: 'was established with a vision to simplify IT for businesses.',
  },
  {
    year: '2005',
    title: 'Cloud Services',
    description: 'Expanded into cloud hosting and virtualization services.',
  },
  {
    year: '2012',
    title: 'Cybersecurity',
    description:
      'Launched comprehensive cybersecurity and compliance services.',
  },
  {
    year: '2020',
    title: 'AI Integration',
    description:
      'Pioneered AI and machine learning solutions for business automation.',
  },
  {
    year: '2024',
    title: '500+ Clients',
    description: 'Serving over 500 businesses with comprehensive IT solutions.',
  },
];

// Why Choose Us data
const whyChooseUs = [
  {
    icon: 'Briefcase',
    title: 'Industry Expertise',
    description:
      "With 25+ years in the industry, we've navigated every technology evolution and helped hundreds of businesses transform successfully.",
  },
  {
    icon: 'Package',
    title: 'Complete Solutions',
    description:
      'From managed IT and cloud hosting to cybersecurity and AI, we offer comprehensive end-to-end solutions for any business.',
  },
  {
    icon: 'Trophy',
    title: 'Proven Expertise',
    description:
      'Over 500+ satisfied clients across industries trust us to consistently deliver results and build strong lasting partnerships.',
  },
  {
    icon: 'Zap',
    title: 'Future Leadership',
    description:
      'We help you prepare for tomorrow with AI, machine learning, and cloud solutions that deliver competitive advantage today.',
  },
];
---

<Layout
  title="About Us | IT Excellence Since 1999 | BDKinc"
  description="Learn about BDKinc's 25+ year journey of delivering exceptional managed IT services, cloud hosting, and cybersecurity solutions to businesses."
>
  <Navigation
    client:load
    services={servicesData}
    blogPosts={recentPosts}
    currentPath={Astro.url.pathname}
  />
  <main id="main-content">
    {/* Hero Section */}
    <section class="relative overflow-hidden px-4 pt-24 pb-12 sm:px-6 lg:px-8">
      <div class="gradient-mesh absolute inset-0 opacity-30"></div>
      <div class="circuit-overlay absolute inset-0 opacity-40"></div>
      <div class="relative z-10 mx-auto max-w-4xl text-center">
        <h1
          class="fill-mode-both animate-in fade-in slide-in-from-bottom-8 mb-6 text-5xl font-bold duration-700 md:text-6xl"
        >
          <span class="text-foreground">IT Made Simple Since </span>
          <span
            class="to-secondary from-primary bg-linear-to-br bg-clip-text text-transparent"
            >1999</span
          >
        </h1>
        <p
          class="text-muted-foreground fill-mode-both animate-in fade-in slide-in-from-bottom-6 text-xl leading-relaxed delay-200 duration-700 md:text-2xl"
        >
          For over 25 years, BDKinc has been the trusted technology partner for
          businesses seeking reliable, innovative IT solutions. We transform
          complex technology challenges into simple, effective solutions that
          drive business growth.
        </p>
      </div>
      {/* Mission & Vision Section */}
      <section class="px-4 py-24 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-7xl">
          <div class="grid gap-12 md:grid-cols-2">
            {/* Mission - using Card component */}
            <Card
              className="fill-mode-both animate-in fade-in slide-in-from-left-8 flex h-full flex-col items-center justify-center text-center delay-300 duration-700"
              size="lg"
              interactive={false}
            >
              <div class="mb-6">
                <div
                  class="bg-primary/10 inline-flex items-center justify-center rounded-lg p-4"
                >
                  <Rocket className="icon-lg text-primary" />
                </div>
              </div>
              <h2 class="text-foreground mb-4 text-center text-3xl font-bold">
                Our Mission
              </h2>
              <p
                class="text-muted-foreground mx-auto max-w-lg text-center text-lg leading-relaxed"
              >
                To empower businesses through innovative technology solutions
                that simplify IT infrastructure, enhance security, and drive
                operational efficiency. We're committed to being more than just
                a service provider—we're your strategic technology partner.
              </p>
            </Card>

            {/* Vision - using Card component */}
            <Card
              className="fill-mode-both animate-in fade-in slide-in-from-right-8 flex h-full flex-col items-center justify-center text-center delay-400 duration-700"
              size="lg"
              interactive={false}
            >
              <div class="mb-6">
                <div
                  class="bg-secondary/10 inline-flex items-center justify-center rounded-lg p-4"
                >
                  <Eye className="icon-lg text-secondary" />
                </div>
              </div>
              <h2 class="text-foreground mb-4 text-center text-3xl font-bold">
                Our Vision
              </h2>
              <p
                class="text-muted-foreground mx-auto max-w-lg text-center text-lg leading-relaxed"
              >
                To be the most trusted IT partner for businesses seeking to
                leverage technology for competitive advantage. We envision a
                future where businesses of all sizes can access enterprise-grade
                IT solutions with simplicity and confidence.
              </p>
            </Card>
          </div>
        </div>
      </section>
      <div
        class="from-brand-primary to-brand-secondary absolute right-0 bottom-0 left-0 h-2 bg-linear-to-br"
      >
      </div>
    </section>

    {/* Values Section */}
    <section class="px-4 py-24 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-7xl">
        <div class="mb-16 text-center">
          <h2
            class="fill-mode-both animate-in fade-in slide-in-from-bottom-8 mb-4 text-4xl font-bold duration-600 md:text-5xl"
          >
            <span class="text-foreground">Our </span>
            <span class="text-primary">Values</span>
          </h2>
          <p
            class="text-muted-foreground fill-mode-both animate-in fade-in slide-in-from-bottom-4 mx-auto max-w-2xl text-xl delay-100 duration-600"
          >
            The principles that guide everything we do
          </p>
        </div>

        {/* Values Grid */}
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
          {
            values.map((value, index) => {
              const iconMap = {
                Target,
                Lightbulb,
                Shield,
                Users,
                Award,
                Clock,
                Box,
              };
              const IconComponent =
                iconMap[value.icon as keyof typeof iconMap] || Box;
              return (
                <Card
                  className={`fill-mode-both animate-in fade-in zoom-in flex h-full flex-col items-center justify-center text-center duration-600 delay-${200 + index * 100}`}
                  size="lg"
                  interactive={false}
                >
                  <div class="mb-6">
                    <div class="bg-primary/10 inline-flex items-center justify-center rounded-lg p-3">
                      <IconComponent className="icon-md text-primary" />
                    </div>
                  </div>
                  <h3 class="text-foreground mb-3 text-center text-xl font-bold">
                    {value.title}
                  </h3>
                  <p class="text-muted-foreground text-center">
                    {value.description}
                  </p>
                </Card>
              );
            })
          }
        </div>
      </div>
    </section>

    {/* Journey/Timeline Section */}
    <section class="px-4 py-24 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-5xl">
        <div class="mb-16 text-center">
          <h2
            class="fill-mode-both animate-in fade-in slide-in-from-bottom-8 mb-4 text-4xl font-bold duration-600 md:text-5xl"
          >
            <span class="text-foreground">Our </span>
            <span class="text-primary">Journey</span>
          </h2>
          <p
            class="text-muted-foreground fill-mode-both animate-in fade-in slide-in-from-bottom-4 mx-auto max-w-2xl text-xl delay-100 duration-600"
          >
            A legacy of innovation and excellence
          </p>
        </div>

        {/* Timeline */}
        <div class="relative">
          {/* Vertical line */}
          <div
            class="from-primary via-secondary to-primary absolute top-0 bottom-0 left-8 w-0.5 bg-gradient-to-b md:left-1/2"
          >
          </div>

          <div class="space-y-12">
            {
              milestones.map((milestone, index) => {
                const isEven = index % 2 === 0;
                return (
                  <div
                    class={`relative ${isEven ? 'md:text-right' : 'md:text-left'}`}
                  >
                    <div
                      class={`md:grid md:grid-cols-2 md:gap-8 ${isEven ? '' : 'md:flex-row-reverse'}`}
                    >
                      <div
                        class={isEven ? 'md:pr-12' : 'md:col-start-2 md:pl-12'}
                      >
                        <Card
                          className={`fill-mode-both animate-in ml-16 md:ml-0 ${index % 2 === 0 ? 'slide-in-from-left-8' : 'slide-in-from-right-8'} fade-in duration-700 delay-${200 + index * 100}`}
                          size="lg"
                          interactive={false}
                        >
                          <div class="text-primary mb-2 text-3xl font-bold">
                            {milestone.year}
                          </div>
                          <h3 class="text-foreground mb-2 text-xl font-bold">
                            {milestone.title}
                          </h3>
                          {index === 0 ? (
                            <p class="text-muted-foreground">
                              <span class="font-display font-extrabold">
                                BDKinc
                              </span>{' '}
                              {milestone.description}
                            </p>
                          ) : (
                            <p class="text-muted-foreground">
                              {milestone.description}
                            </p>
                          )}
                        </Card>
                      </div>
                    </div>
                    {/* Timeline dot */}
                    <div class="bg-primary ring-background absolute top-6 left-8 -ml-2 h-4 w-4 rounded-full shadow-[--shadow-glow-sm] ring-4 md:left-1/2" />
                  </div>
                );
              })
            }
          </div>
        </div>
      </div>
    </section>

    {/* Why Choose Us Section */}
    <section class="px-4 py-24 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-7xl">
        <div class="mb-16 text-center">
          <h2
            class="fill-mode-both animate-in fade-in slide-in-from-bottom-8 mb-4 text-4xl font-bold duration-600 md:text-5xl"
          >
            <span class="text-foreground">Why Choose </span>
            <span class="text-primary font-display font-extrabold">BDKinc</span>
            <span class="text-foreground">?</span>
          </h2>
          <p
            class="text-muted-foreground fill-mode-both animate-in fade-in slide-in-from-bottom-4 mx-auto max-w-2xl text-xl delay-100 duration-600"
          >
            Four core reasons why industry leaders trust us with their
            technology
          </p>
        </div>

        {/* Why Choose Us Grid */}
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
          {
            whyChooseUs.map((item, index) => {
              const iconMap = {
                Briefcase,
                Package,
                Trophy,
                Zap,
                Box,
              };
              const IconComponent =
                iconMap[item.icon as keyof typeof iconMap] || Box;
              const delayClasses = [
                'delay-200',
                'delay-300',
                'delay-400',
                'delay-500',
              ];
              return (
                <Card
                  className={`animate-in fade-in zoom-in flex h-full flex-col items-center justify-center text-center duration-600 ${delayClasses[index] || 'delay-200'} group hover:shadow-primary/20 transition-all hover:shadow-lg`}
                  size="lg"
                  interactive={false}
                >
                  <div class="mb-6">
                    <div class="from-primary/20 to-secondary/10 group-hover:from-primary/30 group-hover:to-secondary/20 inline-flex items-center justify-center rounded-lg bg-linear-to-br p-3 transition-colors">
                      <IconComponent className="icon-lg text-primary" />
                    </div>
                  </div>
                  <h3 class="text-foreground mb-3 text-center text-lg font-bold">
                    {item.title}
                  </h3>
                  <p class="text-muted-foreground text-sm leading-relaxed">
                    {item.description}
                  </p>
                </Card>
              );
            })
          }
        </div>
      </div>
    </section>

    {/* CTA Section */}
    <CTASection
      client:visible
      title="Ready to Partner with BDKinc?"
      description="Let's discuss how our 25+ years of experience can help transform your IT infrastructure and drive business growth."
      buttonText="Start the Conversation"
      buttonHref="/contact"
    />
  </main>

  {/* Footer */}
  <footer class="relative px-4 py-12 sm:px-6 lg:px-8">
    <div
      class="relative z-10 mx-auto flex max-w-7xl flex-col items-center text-center"
    >
      <div>
        <Logo />
      </div>
      <p class="text-muted-foreground mb-4">
        Your trusted technology partner since 1999
      </p>
      <p class="text-muted-foreground/70 text-sm">
        &copy; {new Date().getFullYear()}
        <span class="font-display font-extrabold">BDKinc</span>. All rights
        reserved.
      </p>
    </div>
  </footer>
</Layout>
